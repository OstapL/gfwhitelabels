
div(tabindex='-1' role='dialog' aria-hidden='true' aria-labelledby="generic-modal-label").modal.fade#generic-modal
  div.modal-dialog(role='document')
    div.modal-content
      div.modal-header
        h5.modal-title#generic-modal-label #{ type }
        button(type="button"  aria-label="Close").close.modal-btn-cancel
          span(aria-hidden="true") &times;
    div.modal-body
      | #{ message }

    div.modal-footer
      button(type="button").btn.btn-secondary.modal-btn-ok OK
      case type
        when 'confirm'
          button(type="button").btn.btn-primary.modal-btn-cancel CANCEL
        //-
          when 'info'
          when 'warning'
          when 'error'


