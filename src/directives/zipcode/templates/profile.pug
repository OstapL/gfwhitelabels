input(type="hidden" name="city" value=user.city disabled=((user.country=='US') ? false : true))
  input(type="hidden" name="state" value=user.state disabled=((user.country=='US') ? false : true))
  .row
    .col-xl-6.col-lg-6
      //if user.country == 'US'
      -
        pug_html += app.fields.textLabel('zip_code', _.extend({
        'class1': 'col-xl-6 col-lg-12 text-xl-right text-lg-left',
        'class2': 'col-xl-6 col-lg-12 input-min-width',
        'type': 'text',
        'value': user.zip_code,
        }, fields.zip_code))

    .col-xl-6.col-lg-6.city_states.required
      .row
        label.col-xl-5.col-lg-12.col-md-6.col-sm-6.col-xs-6.text-xl-right.text-lg-left City/State
        .col-xl-7.col-lg-12.col-md-6.col-sm-6.col-xs-6
          a(
          data-toggle="modal"
          data-target="#city_state_modal"
          href="#city_state_modal"
          ).change_state_city
            span.input-value.js-city-state
              | #{ user.city || '(City)' }, #{ user.state || '(State)' }
            i.fa.fa-pencil-square-o.link-1