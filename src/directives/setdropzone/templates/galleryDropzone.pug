- 
  klass = options.class || '';
  var requiredklass = options.required ? 'required' : '',
    popoverklass = options.help_text ? 'showPopover' : '';

  klass = "row media-item galleryDropzone " + klass + " " + fileElement.fieldName + " " + requiredklass;

  klass1 = klass1 || 'col-xl-3 col-lg-12 text-xl-right text-lg-left ';
  klass1 += requiredklass;

  klass2 = klass2 || 'col-xl-9 col-lg-12 p-l-1 p-r-1';
  klass2 += ' dropzone__' + fileElement.fieldName;

  label = options.label || ' ';
  text = options.text || 'Drop your photo(s) here or click to upload';
  if(options.required && options.required == true) {
    label += '<span class="color-red">*</span>' 
  }

div(class=klass)
  div(data-content=(options.help_text || '') class=popoverklass).dropzoneContainer
    div(class=klass1)
      label(for=this.fileElement.file.id || name)!= label

    div(class=klass2)
      div(class=" col-lg-12 p-r-0 p-l-0 border-dropzone" id=this.galleryElement.fieldName)
        div(class="uploading collapse")
          i.fa.fa-spinner.fa-pulse.fa-3x.fa-fw
        .row
          div.col-xl-4.offset-xl-4.text-xs-center.dropzone-text.p-l-0.p-r-0
            a( class='link-1' href="#")
              p.drop-photo #{text}
              .icon-gallery
                i(class=" fa fa-file-image-o")
        - var files = this.galleryElement.files;
        .row
          .col-lg-12.m-t-1.dragDropHint(style=("display: " + (files.length >= 2 ? "block;" : "none;")))
            .warning-block.text-lg-left.m-b-0
              i.fa.fa-info-circle
              span.warning-text Please feel free to drag and place your photos in the order you prefer.
          div
            div.col-xl-12.all-gallery.p-l-0.p-r-0
              .file-scroll.fileHolder
                each file,index in this.galleryElement.files
                  - pug_html += file.render().resultHTML
