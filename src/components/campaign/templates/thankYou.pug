| !{app.breadcrumbs('thank you!', '', [ ['Home', '/'], ['Explore', '/companies'], [investment.company.name, '/' + investment.company_id], ['Invest in ' + investment.company.name, '']])}
-
  var SECURITY_TYPE = require('consts/raisecapital/security_type.json');
  var socialDirective = require('directives/social/index.js');
  var socialShare = _.extend({
    campaign: investment.campaign,
  }, investment.company);
.container
  .row
    .col-sm-8.offset-sm-2
      h2.text-xs-center.m-b-1.font-weight-light.m-t-0
        i(aria-hidden="true").like-icon-circle.fa.fa-thumbs-o-up.m-r-1
        | Thank you for your investment.
      h2.text-xs-center.m-t-0.m-b-0.font-weight-light #{ investment.company.name } is now $#{ investment.amount } closer to their goal!

  .row
    .col-sm-8.offset-sm-2.mb50.mt50
      hr.m-t-0.m-b-0
  .row
    .col-xl-12.text-xs-center
      h2.font-weight-light.m-t-0.m-b-2 “I just invested in #{ investment.company.name }!”
    .col-lg-12.share.p-t-0.text-xs-center.m-b-2
      | !{ socialDirective.render(socialShare, { titlePrefix: 'I invested in '}) }
  .row.thank-you-page
    .col-xl-8.offset-xl-2.overview
      .thankyou-page
        table.table.table-bordered
          tbody
            tr.bgc-row-top
              td(colspan="2")
                h3.text-lg-center.text-xs-center.campaign-subheading Here is a summary of your transaction:
            tr.bgc-row-middle
              td.width-50
                p Transaction ID
              td
                p Company
            tr
              td
                h3.font-weight-bold #{ investment.id }
              td
                h3.font-weight-bold #{ investment.company.name }
            case investment.security_type
              when SECURITY_TYPE.RevenueShare
                tr.bgc-row-middle
                  td.width-50
                    p Revenue Share
                  td
                    p Investment
                tr
                  td
                    h3.font-weight-bold #{ investment.percentage_revenue}% Revenue Share Capped at #{investment.cap}x
                  td
                    h3.font-weight-bold $#{ investment.amount }
                if investment.perk && investment.perk.length
                  tr.bgc-row-middle
                    td(colspan="2") Perk
                
                  tr
                    td(colspan="2")
                      h3.font-weight-bold #{ investment.perk }
              when SECURITY_TYPE.CommonEquity
                tr.bgc-row-middle
                  td.width-50
                    p Common Equity
                  td
                    p Number of Shares
                tr
                  td
                    h3.font-weight-bold Nonvoting Common Stock
                  td
                    h3.font-weight-bold #{ investment.number_of_shares }
                tr.bgc-row-middle
                  td.width-50
                    p Investment
                  td
                    p Perk
                tr
                  td
                    h3.font-weight-bold $#{ investment.amount }
                  td
                    h3.font-weight-bold
                      if investment.perk && investment.perk.length
                        h3.font-weight-bold #{ investment.perk }
                      else
                        h3
                          hr(style="width:40px;")
        h3.m-b-2.m-t-2 You will have the opportunity to track your investments in the Investor Dashboard
        .info-btn-block
          a(href="/account/investor-dashboard").btn.btn-secondary INVESTOR DASHBOARD
            i.fa.fa-angle-right
