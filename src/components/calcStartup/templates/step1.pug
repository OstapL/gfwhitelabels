- document.title = 'Step 1 - Free Startup Valuation Calculator ' + app.config.siteTitle;
- document.head.querySelector('meta[name="description"]').content = 'Take advantage of our free startup valuation calculator to find out how much your startup idea is worth';

- pug_html += app.breadcrumbs('Startup Valuation Calculator', 'step 1', [ ['Home', '/'], ["What's My Business Worth?", '/calculator/business-valuation'], ["Startup Valuation Calculator", ''],]);

.container.calculator-container
  .row
    .offset-lg-2.col-lg-8
      ul.list-inline.top-breadcrambs.mb45.revenue-share-calculator
        li
          a(href="/calculator/startup/intro").btn
            h4.text-uppercase.m-b-0 Intro
        li
          a(href="/calculator/startup/step-1").current.btn
            h4.text-uppercase.m-b-0 step 1
        li
          a(href="/calculator/startup/finish").next.btn
            h4.text-uppercase.m-b-0 finish

  .row
    .offset-lg-3.col-lg-6
      form.js-calc-form.form-section
        .form-body.clearfix
          .form-group.row
            label(for='industry').col-lg-12.col-form-label.font-weight-normal Please provide the industry to which your business belongs.
            .col-lg-12
              select(name="industry")#industry.form-control.js-select
                option(value = '')= '---'
                each val, index in industryData
                  if val == data.industry
                    option(selected)= val
                  else
                    option= val

          .form-group.row
            label(for='industryEstablishment').col-lg-12.col-form-label.font-weight-normal Is your industry fairly well established? Or is it new, with the potential to quickly grow?
            .col-lg-12
              select(name="industryEstablishment")#industryEstablishment.form-control.js-select
                option(value = '')= '---'
                each item in selects.industryEstablishment
                  if item.value == data.industryEstablishment
                    option(selected, value= item.value)= item.text
                  else
                    option(value= item.value)= item.text

          .form-group.row
            label(for='typeOfEstablishment').col-lg-12.col-form-label.font-weight-normal Would you describe your product or service as a solid improvement over what the market currently offers? Or is it revolutionary, with the potential to be disruptive to the market?
            .col-lg-12
              select(name="typeOfEstablishment")#typeOfEstablishment.form-control.js-select
                option(value = '')= '---'
                each item in selects.typeOfEstablishment
                  if item.value == data.typeOfEstablishment
                    option(selected, value= item.value)= item.text
                  else
                    option(value= item.value)= item.text

          .form-group.row
            label(for='projectedRevenue').col-lg-12.col-form-label.font-weight-normal How much revenue do you expect your business will produce in Year 1?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.projectedRevenue)
                type='money'
                data-value-type='money'
                placeholder='Revenue Year One'
                autocomplete='off'
                name="projectedRevenue"
              )#projectedRevenue.form-control.js-field

          .form-group.row
            label(for='operatingProfit').col-lg-12.col-form-label.font-weight-normal How much operating profit do you expect to earn in Year 1?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.operatingProfit)
                type='money'
                data-value-type='money'
                placeholder='Profit Year One '
                autocomplete='off'
                name="operatingProfit"
              )#operatingProfit.form-control.js-field

          .form-group.row
            label(for='projectedRevenueTwo').col-lg-12.col-form-label.font-weight-normal How much revenue do you expect your business will produce in Year 5?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.projectedRevenueTwo)
                type='money'
                data-value-type='money'
                placeholder='Revenue Year Five'
                autocomplete='off'
                name="projectedRevenueTwo"
              )#projectedRevenueTwo.form-control.js-field
          
          .form-group.row
            label(for='operatingProfitTwo').col-lg-12.col-form-label.font-weight-normal How much operating profit do you expect to earn in Year 5?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.operatingProfitTwo)
                type='money'
                data-value-type='money'
                placeholder='Profit Year Five'
                autocomplete='off'
                name="operatingProfitTwo"
              )#operatingProfitTwo.form-control.js-field

          .form-group.row
            label(for='CashOnHand').col-lg-12.col-form-label.font-weight-normal How much cash, beyond what's needed for immediate operating needs, does your business currently have?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.CashOnHand)
                type='money'
                data-value-type='money'
                placeholder='Cash Holdings'
                autocomplete='off'
                name="CashOnHand"
              )#CashOnHand.form-control.js-field

          .form-group.row
            label(for='yourDebt').col-lg-12.col-form-label.font-weight-normal How much debt is your business currently carrying?
            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.yourDebt)
                type='money'
                data-value-type='money'
                placeholder='Current Debt'
                autocomplete='off'
                name="yourDebt"
              )#yourDebt.form-control.js-field

          .form-group.row
            label(for='cashRaise').col-lg-12.col-form-label.font-weight-normal How much cash do you plan to raise?
            .col-lg-12
              input(
                value=app.helpers.format.formatMoney(data.cashRaise)
                type='money'
                data-value-type='money'
                placeholder='Raise Amount'
                autocomplete='off'
                name="cashRaise"
              )#cashRaise.form-control.js-field

          .form-group.row.clearfix.m0
            .col-xs-6.p-t-2.m-t-1
              a(href="/calculator/startup/intro", role='button').link-3 Go back

            .col-xs-6.mt30
              .controls
                button(type='submit').btn.btn-primary.pull-right.text-uppercase Finish
