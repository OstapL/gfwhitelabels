include ../../raiseFunds/templates/menu.pug

- pug_html += app.breadcrumbs('create form c', '', [ ['Home', '/'], ['Create Form C', '/formc/' + values.id + '/introduction'], ['team members (20% voting shareholder)', ''], ]);

section.formc-team-members-director.container.m-b-85
  - var formcId = values.formc_id;
  - var campaignId = values.campaign_id;
  +menu('formc', 'team-members-holder')

  //START RIGHT BLOCK
  .col-xl-8.col-lg-8.col-md-12.p-xs-0
    h2.text-uppercase.text-lg-center.text-xs-center.m-t-0 Team members (20% voting Shareholder)
    h3.text-lg-left.text-xs-center.col-lg-12.m-t-0 20%+ Voting Shareholder:
    p.col-lg-12.m-b-2.p-xs-0 No earlier than 120 days prior to the date of this offering, please list beneficial owners of 20% or more of issuerâ€™s outstanding voting equity securities.  To calculate total voting power, include direct/indirect shares, include the right through the exercise of options/warrants/conversion, or if securities are held by a family member, through corporations or partnerships, co-trustee, etc. To calculate outstanding voting equity securities, assume all outstanding options are exercised and all outstanding convertible securities converted.

    form(action="").form-section
      input(type="hidden" value=1 name="role[]")
      input(type="hidden" value=1 name="voting_shareholder_choice")
      input(type="hidden" value=(((values.role & 2) == 2) ? 1 : 0) name="individual_director_choice")
      .col-xl-12.p-xs-0
        - 
          pug_html += app.fields.textLabel('first_name', {
          schema: fields.first_name, 
          value: values.first_name,})
        - 
          pug_html += app.fields.textLabel('last_name', {
          schema: fields.last_name, 
          value: values.last_name,})
        - 
          pug_html += app.fields.textLabel('email', {
          schema: fields.email, 
          value: values.email, 
          help_text: 'We will need to contact team members',})
        .row.form-group
          .col-date
            label.col-xl-3.col-lg-12.text-xl-right.textlg-left Date of birth
              span.color-red *
            .col-xl-4.col-lg-6.p-r-0
              - 
                pug_html += app.fields.dateMonth('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateDay('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateYear('dob', _.extend({
                'value': values.dob,
                'placeholder': 'YYYY',
                'divId': 'dob',
                }, fields.dob));

        - 
          pug_html += app.fields.textLabel('number_of_shares', {
          schema: fields.number_of_shares, 
          value: values.number_of_shares,})
        - 
          pug_html += app.fields.textLabel('class_of_securities', {
          schema: fields.class_of_securities, 
          value: values.class_of_securities,})
        - 
          pug_html += app.fields.textLabel('voting_power_percent', {
          schema: fields.voting_power_percent,
          class1: 'col-xl-3 col-lg-12 text-lg-left text-xl-right m-b-0 p-t-0 m-b-lg-1',
          value: values.voting_power_percent,})
      .col-lg-12.text-lg-right.text-sm-center.text-xs-center.m-t-2.p-xs-0
        a(href='/formc/' + values.formc_id + '/team-members').btn.btn-secondary.text-uppercas.m-r-1 Cancel
        button(type='button')#submitForm.btn.btn-primary.text-uppercase Save
          i.fa.fa-angle-right
