include ../../../templates/fields_mixins.pug

include ../../raiseFunds/templates/menu.pug

- pug_html += app.breadcrumbs('create form c', '', [ ['Home', '/'], ['Create Form C', '/formc/' + values.id + '/introduction'], ['team members (director)', ''], ]);

section.formc-team-members-director.container.m-b-85
  - var formcId = values.formc_id;
  - var campaignId = values.campaign_id;
  +menu('formc', 'team-members-director')

  //START RIGHT BLOCK
  .col-xl-8.col-lg-8.col-md-12.team-member-formc
    h2.text-uppercase.text-lg-center.text-xs-center.m-t-0.dosis.mb50 Team members (director)
    form.form-section
      input(type="hidden" value=1 name="role")
      .col-xl-12
        - pug_html += app.fields.textLabel('first_name', {schema: fields.first_name, value: values.first_name,})
        - pug_html += app.fields.textLabel('last_name', {schema: fields.last_name, value: values.last_name,})
        .row.form-group
          .col-date
            label.col-xl-3.col-lg-12.text-xl-right.textlg-left Date of birth
              span.color-red *
            .col-xl-4.col-lg-6.p-r-0
              +fieldDateMonth("dob", _.extend({
                class: 'col-xl-4 col-lg-4 col-xs-4 p-l-0  m-d-p-r-5',
              }, fields.dob))
              +fieldDateDay("dob", _.extend({
                class: 'col-xl-4 col-lg-4 col-xs-4 p-r-0 m-d-p-l-5',
              }, fields.dob))
              +fieldDateYear("dob", _.extend({
                class: 'col-xl-4 col-lg-4 col-xs-4 p-r-0 m-d-p-l-10 p-r-lg-1',
                placeholder: 'YYYY',
                divId: 'dob',
              }, fields.dob))
        - pug_html += app.fields.textLabel('email', {schema: fields.email, value: values.email, placeholder: 'Email Address', help_text: 'We will need to contact team members',})
        .row
          .col-xl-6.col-lg-6.form-group
            .row
              label.col-xl-6.col-lg-12.text-xl-right.text-lg-left.m-b-0.p-t-0.m-b-lg-1 Board Service Start Date
                span.color-red *
              .col-xl-6.col-lg-12
                .row#board_service_start_date
                  +fieldDateMonth("board_service_start_date", _.extend({
                    class: 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                    placeholder: 'MM',
                    name: 'board_service_start_date',
                    label: 'Board Service Start Date',
                  }, fields.board_service_start_date))
                  +fieldDateYear("board_service_start_date", _.extend({
                    class: 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5',
                    placeholder: 'YYYY',
                    name: 'board_service_start_date',
                  }, fields.board_service_start_date))

        - pug_html += app.fields.textLabel('principal_occupation', {class1: 'col-xl-3 col-lg-12 text-lg-left text-xl-right p-t-0 m-b-0 m-b-lg-1', schema: fields.principal_occupation, value: values.principal_occupation, placeholder: 'Principal Occupation and Name of Employer',})
        
        - pug_html += app.fields.textLabel('employer_principal_businesss', {class1: 'col-xl-3 col-lg-12 text-lg-left p-t-0 m-b-0 m-b-lg-1 text-xl-right', schema: fields.employer_principal_businesss, value: values.employer_principal_businesss, placeholder: 'Provide short description of the business',})
        .row
          .col-xl-6.col-lg-6
            .row
              label.col-xl-6.col-lg-12.text-xl-right.text-lg-left.m-b-0.p-t-0.m-b-lg-1 Employment Start Date
                span.color-red *
              .col-xl-6.col-lg-12
                .row#employer_start_date
                  +fieldDateMonth("employer_start_date", _.extend({
                    class: 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                    placeholder: 'MM',
                    name: 'employer_start_date',
                    label: 'Employment Start Date',
                  }, fields.board_service_start_date))
                  +fieldDateYear("board_service_start_date", _.extend({
                    class: 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5 ',
                    placeholder: 'YYYY',
                    name: 'employer_start_date',
                    label: 'Employment Start Date',
                  }, fields.board_service_start_date))
        .row
          .col-xl-12
            .border-bottom.m-t-3.m-b-3
            
        |!{ templates.positions }
        |!{ templates.experiences }

        .row.m-t-3
          .col-xl-12
            .text-md-center.text-sm-center.text-xs-center
              button(type='button' data-method=(values.user_id ? 'PUT' : 'POST'))#submitForm.btn.btn-primary.text-uppercase.pull-lg-right Save
                i.fa.fa-angle-right
              a(href='/formc/' + values.formc_id + '/team-members').btn.btn-secondary.text-uppercas.pull-lg-right.m-r-1 Cancel
