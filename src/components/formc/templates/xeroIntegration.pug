      span.text-btn-xero Connect to XERO


div(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")#xeroModal.modal.fade
  div(role="document").modal-dialog
    .modal-content
      .modal-header
        button(type="button" data-dismiss="modal" aria-label="Close").close
          span(aria-hidden="true")
            i.fa.fa-times
        h2.text-uppercase.text-xs-center Connect to XERO
      .modal-body
        .row
          .col-xl-12
            .warning-block  
              i.fa.fa-info-circle
              span.warning-text Please select the files you would like to upload from your XERO account:
        form.form-section
          .row
            .bank#documents
              .row
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.col-xs-12
                  .form-group
                    label Balance sheet
                      input(type="checkbox" name="documents[]" value="balance_sheet")
                  .form-group
                    label Bank statement
                      input(type="checkbox" name="documents[]" value="bank_statement")
                  .form-group
                    label Bank Summary
                      input(type="checkbox" name="documents[]" value="bank_summary")
                  .form-group
                    label Budget Summary
                      input(type="checkbox" name="documents[]" value="budget_summary")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.col-xs-12.p-r-0
                  .form-group
                    label Executive Summary
                      input(type="checkbox" name="documents[]" value="executive_summary")
                  .form-group
                    label Profit and Loss
                      input(type="checkbox" name="documents[]" value="profit_and_loss")
                  .form-group
                    label Trial Balance
                      input(type="checkbox" name="documents[]" value="trial_balance")
          .row
            .col-xl-12
              .form-group
                .input-wrap
                  label
                    a(href="" id="url" target="_blank").link-2 Get the access code here
                    |  and write below
                  input(text="text" name="code" id="code" data-token="" data-secret="").col-xl-12.form-control
            .col-xl-12.text-xs-center
              input(type="button" class="btn btn-primary xeroGrabData" value="upload files")
      .modal-footer
