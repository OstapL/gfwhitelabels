
mixin row(value, index)
  .col-xl-12
    div(data-index=index class=name + ' addSectionBlock')
      .delete-section-container
        a(href="#" data-section=name data-index=index).delete-sectionnew
          i.fa.fa-times
      | !{app.fields.nestedTextLabel(name, 'amount_of_interest', value, index, attr.schema.amount_of_interest)}
      | !{app.fields.nestedTextLabel(name, 'relationship_to_issuer', value, index, {class1:'col-xl-3 col-lg-12 text-lg-left text-xl-right m-b-0 p-t-0 m-b-lg-1'}, attr.schema.relationship_to_issuer)}
      | !{app.fields.nestedTextLabel(name, 'nature_of_interest', value, index, {class1:'col-xl-3 col-lg-12 text-lg-left text-xl-right m-b-0 p-t-0 m-b-lg-1'}, attr.schema.nature_of_interest)}
      | !{app.fields.nestedTextLabel(name, 'specified_person', value, index, attr.schema.specified_person)}

mixin run()

  if first_run
    div(class=(attr.row == 0 ? '' : 'row ') + name + '_block' + (attr.required == true ? ' required ' : ' ') + ' nested')
      div(class=(attr.row == 0 ? '' : ' ') + name + '_container' + (attr.required == true ? ' required ' : ' ') + ' nested')

        if values == null || values.length == 0
          +row({}, 0)

        else
          each value, index in values
            +row(value, index)
      .col-lg-12
        .row.add-link
          .col-xl-9.offset-xl-3
            a(href="#" data-section=name data-comp='formc' data-template='transaction_with_related_parties').link-2.add-sectionnew
              i.fa.fa-plus
              | Add Related Party

  else
    +row({}, index)

+run()
