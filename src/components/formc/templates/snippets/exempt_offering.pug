include ../../../../templates/fields_mixins.pug

mixin row(value, index)
  - var index = index;
  .col-lg-12.m-t-1
    .col-lg-12(data-index=index class=name + ' addSectionBlock')
      .delete-section-container
        a(href="#" data-section=name data-index=index).delete-sectionnew
          i.fa.fa-times

      | !{app.fields.nestedTextLabel(name, 'amount_sold', value, index, attr.schema.amount_sold)}

      | !{app.fields.nestedTextLabel(name, 'exemption_relied_upon', value, index, {class1:'col-xl-3 col-lg-12 text-lg-left text-xl-right m-b-0 p-t-0 m-b-lg-1',}, attr.schema.exemption_relied_upon)}
      .row.form-group
        .col-date(id="exempt_offering__" + index + "__offering_date")
          label.col-xl-3.col-lg-12.text-xl-right.textlg-left Maturity Date
            span.color-red *
          .col-xl-4.col-lg-6.p-r-0
            | !{app.fields.nestedDateMonth(name, 'offering_date', value, index, attr.schema.offering_date)}

            | !{app.fields.nestedDateDay(name, 'offering_date', value, index, attr.schema.offering_date)}

            | !{app.fields.nestedDateYear(name, 'offering_date', value, index, {placeholder: 'YYYY',}, attr.schema.offering_date)}

      | !{app.fields.nestedTextLabel(name, 'securities_offered', value, index, attr.schema.securities_offered)}
      | !{app.fields.nestedTextLabel(name, 'use_of_proceeds', value, index, attr.schema.use_of_proceeds)}

mixin run()

  if first_run
    div(class=(attr.row == 0 ? '' : 'row ') + name + '_block' + (attr.required == true ? ' required ' : ' ') + ' nested')
      div(class=(attr.row == 0 ? '' : 'row ') + name + '_container' + (attr.required == true ? ' required ' : ' ') + ' nested')

        .row
          .date-input.required.col-lg-12
            .col-date.form-group.m-b-0

              if values == null || values.length == 0
                +row({}, 0)

              else
                each value, index in values
                  +row(value, index)
      .col-lg-12
        .row.add-link
          .col-xl-9.offset-xl-3
            a(href="#" data-section=name data-comp='formc' data-template='exempt_offering').link-2.add-sectionnew
              i.fa.fa-plus
              |  Add Another Exempt Offering

  else
    +row({}, index)


+run()
