- 'use strict';
include ../../../templates/mixins.pug
//- include menu.pug
include ../../../templates/menuRaiseFund.pug

+breadcrumbs('Create Company', '', 
    [
        ['Home', '/'],
        ['Create Formc', ''],
        ['team members', ''],
    ]
)
section.create-company-team-add.container
    +menu('formc', 'team-members')

    //START RIGHT BLOCK
    .col-lg-8
        h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 team members
        div(style='display: ' + (values.members.length < 1 ? 'block' : 'none')).form-group.text-lg-center.notification
           .col-lg-12
             .campaign-warning.warning-team-add.text-lg-left
               i.fa.fa-exclamation-triangle 
               span.warning-text 
                   | Please enter all Officers, Directors and 20% Voting Shareholders.
                   p We are required by law to run background checks on all of these individuals.  We will email them separately to collect the information required to run these checks - and you'll see the status on your Issuer Dashboard.
                   p OFFICER means:  president, vice president, secretary, treasurer or principal financial officer, comptroller or principal accounting officer, and any person routinely performing similar functions.
                   p 20% VOTING SHAREHOLDER means: no earlier than 120 days prior to the date of this offering, please list beneficial owners of 20% or more of issuerâ€™s outstanding voting equity securities.

        form(metod="post" action="").form-section

            .col-lg-12.text-lg-center.text-md-center.text-sm-center.text-xs-center.m-t-2.m-b-2
                    a(href='/formc/team-members/' + values.id + '/add/director/new').btn.text-uppercase.m-r-3 
                        i.fa.fa-plus
                        |  ADD DIRECTOR 
                    a(href='/formc/team-members/' + values.id + '/add/officer/new').btn.text-uppercase 
                        i.fa.fa-plus
                        |  ADD OFFICER
                    a(href='/formc/team-members/' + values.id + '/add/holder/new').btn.text-uppercase 
                        i.fa.fa-plus
                        |  ADD 20% VOTING SHAREHOLDER


            if values.members
                - counter = 0
                each v,k in values.members
                    .col-lg-3.m-t-2.p-r-0.p-l-0.m-l-2.m-r-2
                        .team-add-item.text-lg-center.text-xs-center
                            a(href="/formc/team-members/" + values.id + "/add/" + v.type + '/' + counter).link-1
                                img(src=v.photo alt=v.first_name).img-circle
                            a(href="#" data-id=counter style="position: absolute").link-1.delete-member.pull-right
                                i.fa.fa-times
                            p.name.text-uppercase #{v.first_name} #{v.last_name}
                            p.small #{ v.title }
                            a(href="/formc/team-members/" + values.id + "/add/" + v.type + '/' + counter).link-1
                                i.fa.fa-pencil-square-o
                    - counter ++

            div(style="display: " +  (values.members.length >= 1 ? 'block' : 'none')).col-lg-12.pull-lg-right.p-r-0.m-t-3.text-lg-right.text-md-center.text-sm-center.text-xs-center.buttons-row
                //- a(href="/api/campaign/" + values.id target="_blank").btn.btn-secondary.text-uppercase.m-r-3 preview
                //- a(href="/formc/related-parties/" + values.id).btn.btn-primary.text-uppercase Go to Related Parties
                button.btn.btn-primary.text-uppercase Go to Related Parties
                    i.fa.fa-angle-right
