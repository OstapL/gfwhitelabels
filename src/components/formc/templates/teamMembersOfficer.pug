include ../../../templates/fields_mixins.pug
include ../../raiseFunds/templates/menu.pug

- pug_html += app.breadcrumbs('create form c', '', [ ['Home', '/'], ['Create Form C', '/formc/' + values.id + '/introduction'], ['team members (officer)', ''], ]);

section.formc-team-members-director.container.m-b-85
  - var formcId = values.formc_id;
  - var campaignId = values.campaign_id;
  +menu('formc', 'team-members-officer')

  //START RIGHT BLOCK
  .col-xl-8.col-lg-8.col-md-12.team-member-formc
    h2.text-uppercase.text-lg-center.text-xs-center.m-t-0.dosis.mb50 Team members (officer)
    form.form-section
      input(name="role" type="hidden" value=2)
      .col-xl-12
        - 
          pug_html += app.fields.textLabel('first_name', {
          schema: fields.first_name, 
          value: values.first_name,})
        - 
          pug_html += app.fields.textLabel('last_name', {
          schema: fields.last_name, 
          value: values.last_name,})
        - 
          pug_html += app.fields.textLabel('email', {
          schema: fields.email, 
          value: values.email, 
          placeholder: 'Email Address', 
          help_text: 'We will need to contact team members',})
        .row.form-group
          .col-date
            label.col-xl-3.col-lg-12.text-xl-right.textlg-left Date of birth
              span.color-red *
            .col-xl-4.col-lg-6.p-r-0
              - 
                pug_html += app.fields.dateMonth('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateDay('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateYear('dob', _.extend({
                'value': values.dob,
                'placeholder': 'YYYY',
                'divId': 'dob',
                }, fields.dob));

        - 
          pug_html += app.fields.textLabel('responsibilities', {
          schema: fields.responsibilities, 
          value: values.responsibilities,})
        .filter.p-t-0.p-b-0.m-b-2
          .one_drop.m-t-2
            .row.form-group
              label.col-xl-3.col-lg-12.text-lg-left.text-xl-right Responsibilities
                span.color-red *
              .col-xl-9.col-lg-12.m-b-lg-2.showPopover(data-content=" Select all roles that currently apply.")
                select(name="title[]" multiple="true" title="Responsibilities" data-type="array")#title.form-control.selectpicker.w-100.team-select
                  option(value=1 data-value-type="number" selected=(values.title.indexOf("1") != -1 ? true : false )) CEO/President
                  option(value=2 data-value-type="number" selected=(values.title.indexOf("2") != -1 ? true : false )) Principal Financial Officer/Treasurer
                  option(value=3 data-value-type="number" selected=(values.title.indexOf("3") != -1 ? true : false )) Vice President
                  option(value=4 data-value-type="number" selected=(values.title.indexOf("4") != -1 ? true : false )) Secretary
                  option(value=5 data-value-type="number" selected=(values.title.indexOf("5") != -1 ? true : false )) Controller/Principal Accounting Officer
        .row
          .col-xl-6.col-lg-6
            .row
              label.col-xl-6.col-lg-12.text-xl-right.text-lg-left Start Date
                span.color-red *
              .col-xl-6.col-lg-12
                #start_date.row
                  - 
                    pug_html += app.fields.dateMonth('start_date', _.extend({
                    'empty': { '': 'Choose' },
                    'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                    'value': values.start_date,
                    }, fields.start_date));
                  - 
                    pug_html += app.fields.dateYear('start_date', _.extend({
                    'value': values.start_date,
                    'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5',
                    'placeholder': 'YYYY',
                    }, fields.start_date));
        
        .border-bottom.m-t-3.m-b-3
        |!{ templates.positions }
        |!{ templates.experiences }

        .row.m-t-3
          .col-lg-12.text-md-center.text-sm-center.text-xs-center
            - console.log(this.values, values);
            button(type='button' data-method=(values.user_id ? 'PUT' : 'POST'))#submitForm.btn.btn-primary.text-uppercase.pull-lg-right Save
              i.fa.fa-angle-right
            a(href='/formc/' + values.formc_id + '/team-members').btn.btn-secondary.text-uppercas.pull-lg-right.m-r-1 Cancel
