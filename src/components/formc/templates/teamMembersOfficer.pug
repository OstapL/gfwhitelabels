include ../../raiseFunds/templates/menu.pug

- pug_html += app.breadcrumbs('create form c', '', [ ['Home', '/'], ['Create Form C', '/formc/' + values.id + '/introduction'], ['team members (officer)', ''], ]);

section.formc-team-members-director.container.m-b-85
  - var formcId = values.formc_id;
  - var campaignId = values.campaign_id;
  +menu('formc', 'team-members-officer')

  //START RIGHT BLOCK
  .col-xl-8.col-lg-8.p-xs-0.col-md-12.team-member-formc
    h2.text-uppercase.text-lg-center.text-xs-center.m-t-0.dosis.mb50 Team members (officer)
    form.form-section
      .col-xl-12.p-xs-0
        - 
          pug_html += app.fields.textLabel('first_name', {
          schema: fields.first_name, 
          value: values.first_name,})
        - 
          pug_html += app.fields.textLabel('last_name', {
          schema: fields.last_name, 
          value: values.last_name,})
        - 
          pug_html += app.fields.textLabel('email', {
          schema: fields.email, 
          value: values.email, 
          placeholder: 'Email Address', 
          help_text: 'We will need to contact team members',})
        .row.form-group
          .col-date
            label.col-xl-3.col-lg-12.text-xl-right.textlg-left Date of birth
              span.color-red *
            .col-xl-4.col-lg-6.p-r-0
              - 
                pug_html += app.fields.dateMonth('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateDay('dob', _.extend({
                'empty': { '': 'Choose' },
                'value': values.dob,
                }, fields.dob));
              - 
                pug_html += app.fields.dateYear('dob', _.extend({
                'value': values.dob,
                'placeholder': 'YYYY',
                'divId': 'dob',
                }, fields.dob));

        - 
          pug_html += app.fields.textLabel('responsibilities', {
          schema: fields.responsibilities, 
          value: values.responsibilities,})
        .filter.p-t-0.p-b-0
          .one_drop
            .row.form-group
              label.col-xl-3.col-lg-12.text-lg-left.text-xl-right Responsibilities
                span.color-red *
              .col-xl-9.col-lg-12.showPopover(data-content=" Select all roles that currently apply.")
                select(name="role[]" multiple="true" title="Responsibilities" data-type="array")#role.form-control.selectpicker.w-100.team-select
                  option(value=4 data-value-type="number" selected=((values.role & 4) != 0 ? true : false ) ) CEO/President
                  option(value=8 data-value-type="number" selected=((values.role & 8) != 0 ? true : false )) Principal Financial Officer/Treasurer
                  option(value=16 data-value-type="number" selected=((values.role & 16) != 0 ? true : false )) Vice President
                  option(value=32 data-value-type="number" selected=((values.role & 32) != 0 ? true : false )) Secretary
                  option(value=64 data-value-type="number" selected=((values.role & 64) != 0 ? true : false )) Controller/Principal Accounting Officer
        .row
          .col-xl-6.col-lg-6
            .row
              label.col-xl-6.col-lg-12.text-xl-right.text-lg-left Start Date
                span.color-red *
              .col-xl-6.col-lg-12
                #start_date.row
                  - 
                    pug_html += app.fields.dateMonth('start_date', _.extend({
                    'empty': { '': 'Choose' },
                    'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                    'value': values.start_date,
                    }, fields.start_date));
                  - 
                    pug_html += app.fields.dateYear('start_date', _.extend({
                    'value': values.start_date,
                    'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5',
                    'placeholder': 'YYYY',
                    }, fields.start_date));
        .col-lg-12.p-xs-0.m-t-2
          strong Is this individual also a Director?
          .form-group.form-section.m-t-1.m-b-0
            .radio-input.m-b-0.yesno
              
              label 
                input(type="radio" name="individual_director_choice" value="1" )
                |  Yes
              label 
                input(type="radio" name="individual_director_choice" value="0" checked)
                |  No
        - values['individual_director_choice'] = 0
        .individual_director_choice.shown-yes(style="display:" + (values['individual_director_choice'] == 1? 'block' : 'none'))
          .row
            .col-xl-6.col-lg-6.form-group
              .row
                label.col-xl-6.col-lg-12.text-xl-right.text-lg-left.m-b-0.p-t-0.m-b-lg-1 Board Service Start Date
                  span.color-red *
                .col-xl-6.col-lg-12
                  .row#board_service_start_date
                    - 
                      pug_html += app.fields.dateMonth('board_service_start_date', _.extend({
                      'empty': { '': 'Choose' },
                      'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                      'value': values.board_service_start_date,
                      }, fields.board_service_start_date));
                    - 
                      pug_html += app.fields.dateYear('board_service_start_date', _.extend({
                      'value': values.board_service_start_date,
                      'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5',
                      'placeholder': 'YYYY',
                      }, fields.board_service_start_date));

          - 
            pug_html += app.fields.textLabel('principal_occupation', {
            class1: 'col-xl-3 col-lg-12 text-lg-left text-xl-right p-t-0 m-b-0 m-b-lg-1', 
            schema: fields.principal_occupation, 
            value: values.principal_occupation, 
            placeholder: 'Principal Occupation and Name of Employer',})
          
          - 
            pug_html += app.fields.textLabel('employer_principal_businesss', {
            class1: 'col-xl-3 col-lg-12 text-lg-left p-t-0 m-b-0 m-b-lg-1 text-xl-right', 
            schema: fields.employer_principal_businesss, 
            value: values.employer_principal_businesss, 
            placeholder: 'Provide short description of the business',})
          .row
            .col-xl-6.col-lg-6
              .row
                label.col-xl-6.col-lg-12.text-xl-right.text-lg-left.m-b-0.p-t-0.m-b-lg-1 Employment Start Date
                  span.color-red *
                .col-xl-6.col-lg-12
                  .row#employer_start_date

                    - 
                      pug_html += app.fields.dateMonth('employer_start_date', _.extend({
                      'empty': { '': 'Choose' },
                      'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-r-5',
                      'value': values.employer_start_date,
                      'name': 'employer_start_date',
                      }, fields.employer_start_date));
                    - 
                      pug_html += app.fields.dateYear('employer_start_date', _.extend({
                      'value': values.employer_start_date,
                      'class1': 'col-xl-6 col-lg-6 col-sm-6 col-xs-6 m-d-p-l-5',
                      'placeholder': 'YYYY',
                      'name': 'employer_start_date',
                      }, fields.employer_start_date));
        .col-lg-12.p-xs-0.m-t-2
          strong Is this individual also a 20%+ Voting Shareholder?
          .form-group.form-section.m-t-1.m-b-0
            .radio-input.m-b-2.yesno
              - values['voting_shareholder_choice'] = 0
              label 
                input(type="radio" name="voting_shareholder_choice" value="1" checked=(values['voting_shareholder_choice'] == 1))
                |  Yes
              label 
                input(type="radio" name="voting_shareholder_choice" value="0" checked=(values['voting_shareholder_choice'] == 0))
                |  No
        .voting_shareholder_choice.shown-yes(style="display:" + (values['voting_shareholder_choice'] == 1? 'block' : 'none'))
          - 
            pug_html += app.fields.textLabel('number_of_shares', {
            schema: fields.number_of_shares,
            label: 'Number of Shares', 
            value: values.number_of_shares,})
          - 
            pug_html += app.fields.textLabel('class_of_securities', {
            schema: fields.class_of_securities,
            label: 'Class of Securities',
            value: values.class_of_securities,})
          - 
            pug_html += app.fields.textLabel('voting_power', {
            schema: fields.voting_power,
            label: '% of Voting Power Prior to Offering',
            class1: 'col-xl-3 col-lg-12 text-lg-left p-t-0 m-b-0 m-b-lg-1 text-xl-right',  
            value: values.voting_power,})
        .row
          .col-xl-12
            .border-bottom.m-t-3.m-b-3
        |!{ templates.positions }
        .row
          .col-xl-12
            .border-bottom.m-t-3.m-b-0
        |!{ templates.experiences }

        .row.m-t-3
          .col-lg-12.text-lg-right.text-sm-center.text-xs-center
            - console.log(this.values, values);
            a(href='/formc/' + values.formc_id + '/team-members').btn.btn-secondary.text-uppercas.m-r-1 Cancel
            button(type='button')#submitForm.btn.btn-primary.text-uppercase Save
              i.fa.fa-angle-right
