- 'use strict';
include ../../../templates/mixins.pug
include menu.pug

+breadcrumbs('Create Company', '', 
  [
    ['Home', '/'],
    ['Create campaign', ''],
    ['team members', ''],
  ]
)
section.create-company-team-add.container

  //START RIGHT BLOCK
  .col-lg-10.offset-lg-1.col-xl-8.offset-xl-0.push-xl-3
    h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 team members
    form(metod="post" action="").form-section
      div(style='display: ' + (values.members.length < 1 ? 'block' : 'none')).form-group.text-lg-center.notification
        .col-lg-12
          .warning-block.text-lg-left
            i.fa.fa-info-circle 
            span.warning-text You have to add at least 1 team member to proceed.
      .col-lg-12.text-lg-center.text-md-center.text-sm-center.text-xs-center.m-t-2.m-b-2
        a(href='/campaign/team-members/' + values.id + '/add/member/new').btn.text-uppercase.m-r-3 
          i.fa.fa-plus
          |  ADD TEAM MEMBER 
        a(href='/campaign/team-members/' + values.id + '/add/advisor/new').btn.text-uppercase 
          i.fa.fa-plus
          |  ADD ADVISOR

      if values.members
        - counter = 0
        each v,k in values.members
          .col-lg-3.m-t-2.p-r-0.p-l-0.m-l-2.m-r-2
            .team-add-item.text-lg-center.text-xs-center
              a(href="/campaign/team-members/" + values.id + "/add/" + v.type + '/' + counter).link-1
                img(src=v.photo alt=v.first_name).img-circle
              a(href="#" data-id=counter style="position: absolute").link-1.delete-member.pull-right
                i.fa.fa-times
              a(href="/campaign/team-members/" + values.id + "/add/" + v.type + '/' + counter).link-1.edit-team-members
                i.fa.fa-pencil-square-o
              p.name.text-uppercase #{v.first_name} #{v.last_name}
              p.small #{ v.title }
              
          - counter ++

      .col-lg-12.pull-lg-right.p-r-0.m-t-3.text-lg-right.text-md-center.text-sm-center.text-xs-center.buttons-row
        a(href="/campaign/specifics/" + values.id).btn.btn-primary.text-uppercase save and continue
          i.fa.fa-angle-right
  +menu('team-members')