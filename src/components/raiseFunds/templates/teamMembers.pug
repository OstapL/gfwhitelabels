include menu.pug

- pug_html += app.breadcrumbs('Create Company', '', [ ['Home', '/'], ['Create Company', '/campaign/' + values.id + '/general_information'], ['team members', ''], ]);

section.create-company-team-add.container
  - var campaignId = values.id;
  - var formcId = formc.id;
  +menu('campaign', 'team-members')

  //START RIGHT BLOCK
  .col-xl-8.col-lg-8.col-md-12
    h2.text-uppercase.text-lg-center.text-xs-center.m-t-0 team members
    form.form-section
      div(style='display: ' + (values.team_members.length < 1 ? 'block' : 'none')).form-group.text-lg-center.notification
        .col-lg-12
          .warning-block.text-lg-left
            i.fa.fa-info-circle 
            span.warning-text You have to add at least 1 team member to proceed.
      .col-lg-12.text-lg-center.text-md-center.text-sm-center.text-xs-center.m-b-2
        a(href='/campaign/' + values.id + '/team-members/add/member/new').btn.text-uppercase.mr30
          i.fa.fa-plus
          |  ADD TEAM MEMBER 
        a(href='/campaign/' + values.id + '/team-members/add/advisor/new').btn.text-uppercase 
          i.fa.fa-plus
          |  ADD ADVISOR

      if values.team_members
        - 
          counter = 0;
          /*
          for(var k in values.team_members) {
            values.team_members[k].index = k;
          }

          function memberSort(a, b) {
            if(a.order == null) {
              return true;
            }
            return a.order > b.order;
          }
          values.team_members.sort(memberSort);
          */


        each v,k in values.team_members
          .col-lg-3.m-t-2.p-r-0.p-l-0.m-l-2.m-r-2
            .team-add-item.text-lg-center.text-xs-center
              a(href="/campaign/" + values.id + "/team-members/add/" + (v.title == 'Advisor' ? 'advisor' : 'member') + '/' + counter).link-1
                img(src=v.photo_data[0].urls[0] alt=v.first_name).img-circle
              a(href="#" data-id=counter style="position: absolute").link-1.delete-member.pull-right
                i.fa.fa-times
              a(href="/campaign/" + values.id + "/team-members/add/" + (v.title == 'Advisor' ? 'advisor' : 'member') + '/' + counter).link-1.edit-team-members
                i.fa.fa-pencil-square-o
              p.name.text-uppercase #{v.first_name} #{v.last_name}
              p.small #{ v.title }
              - counter ++;

      .col-lg-12.pull-lg-right.p-r-0.m-t-3.text-lg-right.text-md-center.text-sm-center.text-xs-center.buttons-row
        a(href="/campaign/" + values.id + "/specifics").btn.btn-primary.text-uppercase save and continue
          i.fa.fa-angle-right
