include menu.pug

- 
  var imageDropzone = require('directives/setdropzone/image.js'); 
  var galleryDropzone = require('directives/setdropzone/gallery.js'); 
  pug_html += app.breadcrumbs('Create Company', '', [ ['Home', '/'], ['Create Company', '/campaign/' + values.id + '/general_information'], ['Media', ''], ]);

section.create-company-media.container.media-container
  - var campaignId = values.id;
  - var formcId = formc.id;
  +menu('campaign', 'media')

  //START RIGHT BLOCK
  .col-xl-9.col-lg-8.col-md-12
    h2.text-uppercase.dosis.text-lg-center.text-xs-center.m-t-0 Media
    form.form-section
      .col-xl-12.p-r-2.p-l-lg-1.p-sm-0
        -
          pug_html += new imageDropzone.ImageDropzone(view, 
            'header_image_image_id', 
            'header_image_data', 
            view.fields.header_image_image_id
          ).render().resultHTML;

          pug_html += new imageDropzone.ImageDropzone(view, 
            'list_image_image_id', 
            'list_image_data', 
            view.fields.list_image_image_id
          ).render().resultHTML;

        .m-b-2
          -
            pug_html += new galleryDropzone.GalleryDropzone(view, 
              'gallery_group_id', 
              'gallery_group_data', 
              view.fields.gallery_group_id
            ).render().resultHTML;
        .row
          .col-lg-12.m-t-2.m-b-3.p-sm-0
            hr
        .col-lg-12
          h3.text-lg-center.col-md-center.col-xs-center.m-t-0 Recommended Additional Media

        .row.m-b-2.recommended.p-sm-0.main-video-block
          .p-sm-0.video-container
            .col-xl-7.col-lg-6
              - pug_html += app.fields.textLabel('video', {class1:'col-xl-5 col-lg-12 p-t-0 m-b-0 p-sm-0 text-xl-right text-lg-left', class2:'col-xl-7 col-lg-12 p-sm-0', placeholder: 'http://www.', help_text: 'You Tube or Vimeo links only please.', schema: fields.video, value: values.video,})
            
            #video_source.col-xl-5.col-lg-6.p-sm-0
              -
                var videoInfo = app.getVideoInfo(values.video);

              if videoInfo.provider === 'youtube'
                .img-media
                  img(src="http://img.youtube.com/vi/" + videoInfo.id + "/0.jpg")
              else if videoInfo.provider === 'vimeo'
                .img-media
                  img(src="" data-vimeo-id=videoInfo.id).card-img.w-100.vimeo-thumbnail
              else
                .img-media
                  img(src="/img/default/255x153.png")


        .row.m-b-0.additional-video-block
          |!{ templates.additional_video }
        .row
          .col-xl-12.p-sm-0
            .border-bottom.m-t-2.m-b-3
        |!{ templates.press}
        .row
          .col-xl-12.pull-lg-right.text-lg-right.text-sm-center.text-md-center.text-xs-center.m-t-3.p-sm-0
            button#submitForm.btn.btn-primary.text-uppercase save and continue
              i.fa.fa-angle-right

