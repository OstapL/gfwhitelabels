- 'use strict';
include ../../../templates/mixins.pug
include ../../../templates/fields_mixins.pug
include ../../../templates/menuRaiseFund.pug

+breadcrumbs('Create Company', '', 
    [
        ['Home', '/'],
        ['Create campaign', ''],
        ['GENERAL INFORMATION', ''],
    ]
)


section.create-company-general.container.m-b-85
  +menu('campaign', 'general_information')

  .col-lg-8
    h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 GENERAL INFORMATION
    form.form-section
      +fieldTextareaLabel("pitch", _.extend({
        class1: 'col-lg-3 col-md-12 text-md-left',
        class2: 'col-lg-9 col-md-12',
        }, fields.pitch))
      +fieldTextareaLabel("intended_use_of_proceeds", _.extend({
        class1: 'col-lg-3 col-md-12 text-md-left',
        class2: 'col-lg-9 col-md-12',
        }, fields.intended_use_of_proceeds))
      +fieldTextareaLabel("business_model", _.extend({
        class1: 'col-lg-3 col-md-12 text-md-left',
        class2: 'col-lg-9 col-md-12',
        }, fields.business_model))
      .row
        .col-lg-12.m-b-1.text-lg-center.text-md-center.text-xs-center
          h3.d-inline-block.m-b-0.m-t-0 Additional Information 
      +fieldTextareaLabel("additional_info", _.extend({
        class1: 'col-lg-3 col-md-3',
        class2: 'col-lg-9 col-md-9',
        }, fields.additional_info))
      .row.add-link
        .col-lg-9.offset-1.pull-right
          a(href="#" data-section="additional_info").link-2.add-section
            i.fa.fa-plus
            |  Add Another Section
      .border-bottom
      .row
        .col-lg-12.text-lg-center.text-md-center.text-xs-center
          h3.d-inline-block.m-t-0.mb25 FAQs
      .faq-form-group-m-b-0
        +fieldTextareaLabel("faq", _.extend({
          class1: 'col-lg-3 col-md-12 text-md-left',
          class2: 'col-lg-9 col-md-12',
          }, fields.faq))
      .row.m-t-0
        .col-lg-9.offset-1.pull-right
          a(href="#" data-section="faq").link-2.add-section 
            i.fa.fa-plus
            |  Add Another FAQ
      .border-bottom.border-bottom-faq
      .col-lg-12.pull-lg-right.p-r-0.text-lg-right.text-md-center.text-sm-center.text-xs-center
        // button(type="submit" data-href="/api/campaign/" + values.id).btn.btn-secondary.text-uppercase.m-r-3.m-t-0.onPreview preview
        button(type="submit").btn.btn-primary.text-uppercase.m-t-0 save and continue
          i.fa.fa-angle-right

