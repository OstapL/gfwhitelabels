mixin getCompanyUrl(id, section, currentStep, step, name)
    - var prefix = '/' + section + '/';
    if id || currentStep == step
      a(
          href='/' + section + '/' + id + '/' + step
          id="menu_" + section.substr(0, 1) + "_" + step
          class="list-group-item list-group-item-action " + (currentStep == step ? 'active' : '') + 
          ((section == 'formc' && (values.is_paid == false || values.is_approved == false) ) ? 'disabled' : '')) #{ name }
        if step == 'company' && values.id
          .icon-check
            i.fa.fa-check-circle-o
    else
        a(
          href="#"
          id="menu_f_" + step
          class="list-group-item list-group-item-action disabled" 
        ) #{ name }

mixin getRiskFactorsItem(id, section, currentStep, step, name)
  - var prefix = '/' + section + '/';
  if id || currentStep == step
      a(
        href=prefix + id + "/" + step
        id="menu_f_" + step
        class="list-group-item list-group-item-action " + (currentStep == step ? 'active' : '') +
          ((section == 'formc' && values.is_paid == false ) ? 'disabled' : '')
      ) #{ name }
          if values.progress[step] == true
              .icon-check
                i.fa.fa-check-circle-o
  else
      a(
        href="#"
        class="list-group-item list-group-item-action disabled" 
      ) #{ name }
        
