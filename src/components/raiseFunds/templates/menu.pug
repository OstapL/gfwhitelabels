- 'use strict';
mixin getCompanyUrl(campaign, current, step, name)
    if campaign.id || current == step
        a(
          href="/campaign/" + step + "/" + campaign.id 
          class="list-group-item list-group-item-action " + (current == step ? 'active' : '')
        ) #{ name }
            if current == step
                i.fa.fa-check
    else
        a(
          href="#"
          class="list-group-item list-group-item-action disabled" 
        ) #{ name }

        
mixin menu(current)
    .col-lg-3.create_compaign
      .jumbotron.jumbotron-fluid.row
        .raise-funds
          h4.font-weight-bold.text-uppercase.m-b-0 Raise funds
            .small-text (10% Done)
        #accordion(role="tablist" aria-multiselectable="true")
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#company"
              aria-expanded="true"
              class="list-group-item" + (current == 'company' ? ' active ' : '')
              )
                i.fa.fa-briefcase
                |  Company
                span.pull-right
                  i.fa.fa-angle-left
            #company(role="tabpanel" class="panel-collapse collapse " + (current == 'company' ? 'in' : ''))
              .list-group
                a(href="/company/create" class="list-group-item list-group-item-action " + (current == 'company' ? 'active' : '')) Company Detail
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#campaign"
              aria-expanded="true"
              class="list-group-item" + (current != 'company' ? ' active ' : '')
              ).list-group-item
                i.fa.fa-bar-chart
                |  Campaign
                span.pull-right
                  i.fa.fa-angle-down
            #campaign(role="tabpanel" class="panel-collapse collapse" + (current != 'company' ? ' in' : ''))
                .list-group
                    +getCompanyUrl(values, current, 'general_information', 'General Information')
                    +getCompanyUrl(values, current, 'media', 'Media')
                    +getCompanyUrl(values, current, 'team-members', 'Team Members')
                    +getCompanyUrl(values, current, 'specifics', 'Specifics')
                    +getCompanyUrl(values, current, 'perks', 'Perks')
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#form_c"
              aria-expanded="true"
              ).list-group-item
                i.fa.fa-university
                |  form c
                span.pull-right
                  i.fa.fa-angle-left
            #form_c(role="tabpanel").panel-collapse.collapse
                .list-group
                    a(href="/formc/introduction/1").list-group-item.list-group-item-action form c
                .list-group
                    a(href="formc/team-members/1").list-group-item.list-group-item-action Team Member
                .list-group
                    a(href="#").list-group-item.list-group-item-action Releated Parties
                .list-group
                    a(href="#").list-group-item.list-group-item-action Offering
      .row
        .col-lg-12.text-xs-center
          button(type="button" data-href=("#")).btn.btn-secondary.text-uppercase.m-t-2.onPreview preview
          button(type="submit" data-toggle="modal" data-target="#compani_publish" href="#compani_publish").btn.btn-primary.text-uppercase.m-t-2 submit campaign
      .row
        .education-link-wrap
          .jumbotron.jumbotron-fluid
            h4.font-weight-bold.text-uppercase
              i.fa.fa-book
              |  education Links
            .nav
              li.nav-item
                a(href="/pg/investor_tutorial" target="_blank").nav-link.link-3 Issuer Tutorial
              li.nav-item
