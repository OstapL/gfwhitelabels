.col-lg-8.offset-lg-2.pt30.comment-form-div
  form.comment-form.form-section
    .col-lg-8
      input(type="hidden" name="parent" value=model.parent || "null")
      input(type="hidden" name="is_related" value=model.is_related || 0)
      input(type="text" name="body" placeholder="Type your text here..." value=model.body)
    .col-lg-4.p-r-0.text-xl-right.text-xs-center.p-t-sm-1
      button(type="submit").btn.btn-primary.text-uppercase.pull-lg-right Submit
