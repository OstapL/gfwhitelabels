- pug_html += app.breadcrumbs('Established Business Valuation Calculator', 'Step 1', [ ['Home', '/'], ["What's My Business Worth?", '/calculator/BusinessValuation'], ["Established Business Valuation Calculator", ''],]);


.container.calculator-container
  .row
    .offset-lg-2.col-lg-8
      ul.list-inline.top-breadcrambs.mb45.established-business
        li
          a(href="/calculator/establishedBusiness/intro").btn
            h4.text-uppercase.m-b-0 Intro
        li
          a(href="/calculator/establishedBusiness/step-1").current.btn
            h4.text-uppercase.m-b-0 step 1
        li
          a(href="/calculator/establishedBusiness/step-2").next.btn
            h4.text-uppercase.m-b-0 step 2
        li
          a(href="/calculator/establishedBusiness/step-3").next.btn
            h4.text-uppercase.m-b-0 step 3
        li
          a(href="/calculator/establishedBusiness/finish").next.btn
            h4.text-uppercase.m-b-0 Finish

  .row
    .offset-lg-3.col-lg-6
      form(method="post" action="").form-section
        .form-body.clearfix
          .form-group.row
            label(for='industry').col-lg-12.col-form-label.font-weight-normal Please provide the industry to which your business belongs.
            .col-lg-12
              select(data-model-value='industry' name="industry")#industry.form-control.js-select
                each val, index in industryData
                  if val == data.industry
                    option(selected)= val
                  else
                    option= val

          .form-group.row
            label(for="raiseCash").col-lg-12.font-weight-normal How much cash do you plan to raise?

            .col-lg-12
              input(
                value= formatPrice(data.raiseCash),
                type='text',
                placeholder='Raise Amount',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='raiseCash',
                name="raiseCash"
                data-current-value= data.raiseCash)#raiseCash.form-control.js-field

          .form-group.row
            label(for="ownCache").col-lg-12.font-weight-normal How much cash, beyond what's needed for immediate operating needs, does your business currently have?

            .col-lg-12
              input(
                value= formatPrice(data.ownCache),
                type='text',
                placeholder='Cash Holdings',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='ownCache',
                name="ownCache",
                data-current-value= data.ownCache)#ownCache.form-control.js-field

          .form-group.row
            label(for="currentDebt").col-lg-12.font-weight-normal How much debt is your business currently carrying?

            .col-lg-12
              input(
                value= formatPrice(data.currentDebt),
                type='text',
                placeholder='Current Debt',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='currentDebt',
                name="currentDebt",
                data-current-value= data.currentDebt)#currentDebt.form-control.js-field

          .form-group.row.clearfix.m0
            .col-xs-6.p-t-2.m-t-1
              a(href='/calculator/establishedBusiness/intro').link-3 Go back
              p.help-text Don't worry we saved this info

            .col-xs-6.mt30
              .controls
                button.btn.btn-primary.pull-right.text-uppercase Next
                // add class .pointer-events-none to disable all events for this button
