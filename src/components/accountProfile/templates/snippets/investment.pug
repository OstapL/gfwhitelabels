div(data-investmentid=id).one_table
  -
    var url = campaign.getMainImage();
    var background = 'background: url(' + url + ') center center no-repeat; background-size: cover;';
  .img_column.text-lg-center.text-sm-center(style=background)

    if active
      span.img_tab #{campaign.daysLeft() + ' Days Left'}
      if processed
        span.investment-processed
          i.fa.fa-check.like-icon-circle
          | Investment Processed

    if cancelled
      span.successfull.unsuccessfull  Cancelled
    if expired
      span.end-date  #{campaign.expirationDate.format('MM/DD/YYYY')}

    h2.text-uppercase #{company.name}
  .right-columns
    .one_line
      .col40
        span.light_grey Amount Invested
      .col60
        span.bold-grey.font-weight-bold #{'$' + (amount || 0).toLocaleString('en-US') }
    .one_line
      .col40
        span.light_grey Investment Day
      .col60
        span.dark_grey #{createdDate.format('MM/DD/YYYY') }
    .one_line
      .col40
        span.light_grey Investment ID
      .col60
        span.dark_grey #{id}
    .one_line
      .col40
        span.light_grey Security
      .col60
        span.dark_grey #{security_type == 0 ? 'Common Equity' : 'Revenue Share'}
    .one_line
      .col40.col-perks
        span.light_grey Perks
      .col60.col-perks.showPopover(data-content=perk)
        span.dark_grey #{perk}
  .right_buttons
    h3 Downloadable Files
    ul
      li
        a(href=campaign.investor_presentation_file_id.getUrl('origin') target="_blank").link-3 Investor Presentation
      li
        a(href=(formc.link_to_formc || "#") data-id=id target="_blank" disabled=formc.link_to_formc).link-3.formc-docs-link Form C
      li
        a(href="#" data-id=id target="_blank").link-3.financial-docs-link Financials
      li
        a(
          href="#"
          data-object-id=id
          data-security-type=security_type
          target="_blank"
        ).link-3.agreement-link Agreements
  .bottom_column
    .top_descript
      .left_text
        h3 #{app.helpers.format.formatAmount(campaign.amount_raised)}
        span Raised
      .right_text
        h3 #{app.helpers.format.formatAmount((campaign.minimum_raise))}
        span Goal
      p.percents #{ campaign.fundedPercentage().text }
      .clear
    .progress_line_container
      progress(value=campaign.amount_raised max=(campaign.minimum_raise || campaign.maximum_raise)).progress
    .text-xs-center
      - var campaignURL = '/' + (company.slug || company.id);
      a(href=campaignURL).btn.btn-sm.btn-secondary.text-uppercase view campaign
        i.fa.fa-angle-right
    .cancel_invest
      if active
        //a(
          href="#"
          data-id=(id || 0)
          ).cancel-investment.font-weight-bold Cancel investment
        button(
          type="button"
          data-toggle="modal" data-target="#investor_popup"
          href="#"
        ).font-weight-bold.cancel Cancel investment

        div(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")#investor_popup.modal.fade
          div(role="document").modal-dialog
            .modal-content
              .container
                .modal-header.p-x-0.p-b-0
                  button(type="button" data-dismiss="modal" aria-label="Close").close
                    span(aria-hidden="true")
                      i.fa.fa-times
                  h2.text-uppercase.text-xs-center.mt50 Are you sure?

                .modal-body
                  form(data-id=id).cancelInvestment
                    .row
                      - 
                        pug_html += app.fields.textareaLabel('cancelled_reason', {
                          class1: 'col-xs-12 text-xs-left',
                          class2: 'col-xs-12',
                          placeholder: 'Type here...',
                          schema: fields.cancelled_reason
                        });
                        pug_html += app.fields.textareaLabel('feedback', {
                          class1: 'col-xs-12 text-xs-left',
                          class2: 'col-xs-12',
                          placeholder: 'Type here...',
                          schema: fields.feedback
                        })
                    .rating-wrap.row
                      .row
                        .col-xl-12.text-xs-left
                          label Please evaluate our platform
                      .row
                        .col-xl-12
                          .rating
                            input(type="radio" id="star5" name="rating" value="5")
                            label(for="star5")
                            input(type="radio" id="star4" name="rating" value="4")
                            label(for="star4")
                            input(type="radio" id="star3" name="rating" value="3")
                            label(for="star3")
                            input(type="radio" id="star2" name="rating" value="2")
                            label(for="star2")
                            input(type="radio" id="star1" name="rating" value="1")
                            label(for="star1")
                      .row.text-xs-center
                        button(type="submit").btn.btn-primary Cancel Investment
            .modal-footer
  .clear
