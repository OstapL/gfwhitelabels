include ../../../templates/mixins.pug
section.reset
  .container
    .col-lg-12
      h2.dosis.text-uppercase.text-sm-center.text-xs-center.m-t-85 Change Password

    .col-lg-4.offset-lg-4
      form(data-method="PUT").form-section
        .col-lg-12
          .form-group.row.clearfix.required
            input(type="password" placeholder="New password" name="new_password1").form-control
        .col-lg-12
          .form-group.row.clearfix.required
            input(type="password" placeholder="Repeat password" name="new_password2").form-control
        .col-lg-12
          .row.text-sm-center
            button(type="submit").btn.btn-primary.text-uppercase Save
