
- pug_html += app.breadcrumbs('investor dashboard', '', [ ['Home', '/'], ['investor dashboard', ''],]);

section.investor-dashboard
  .container
    .col-lg-12
      if (!investments.active || !investments.active.length) && (!investments.historical || !investments.historical.length)
        div(role="alert").alert.alert-warning
          strong You have not invested yet
      else
        select.orderby.custom-select.pull-right.text-uppercase.hidden-xs-down
          option(checked="checked" value="0") default sorting
        ul(role="tablist").nav.standart-nav-tabs.row
          li.nav-item
            a.nav-link.text-uppercase.active#active-tab(
              data-toggle="tab"
              href="#active"
              role="tab"
              aria-controls="active"
              aria-expanded="true"
            ) active
          li.nav-item
            a.nav-link.text-uppercase#historical-tab(
              data-toggle="tab"
              href="#historical"
              role="tab"
              aria-controls="historical"
              aria-expanded="false"
            ) Historical
              .clearfix

        .row
          .tab-content
            .tab-pane.fade.active.in#active(
              role="tabpanel"
              aria-labelledby="active-tab"
              aria-expanded="true"
            )
              .active-investor-dashboard.investor_table
                each i in investments.active
                  | !{ helpers.fields.investment(i, { active: true }, helpers) }
                else
                  div(role="alert").alert.alert-warning
                    strong You have no active investments

            .tab-pane.fade#historical(
              role="tabpanel"
              aria-labelledby="historical-tab"
              aria-expanded="false"
            )
              .active-investor-dashboard.investor_table
                each i in investments.historical
                  | !{ helpers.fields.investment(i, {}, helpers) }
                else
                  div(role="alert").alert.alert-warning
                    strong You have no historical investments
