div(data-investmentid=id).one_table
  -
    var url = campaign.getMainImage();
    var background = 'background: url(' + url + ') center center no-repeat; background-size: cover;';
  .img_column.text-lg-center.text-sm-center(style=background)

    if active
      span.img_tab #{campaign.daysLeft() + ' Days Left'}
    if cancelled
      span.successfull.unsuccessfull  Cancelled
    if expired
      span.end-date  #{campaign.expiration_date.format('MM/DD/YYYY')}
    if add_deposit_to_csv
      span.investment-processed
        i.fa.fa-check.like-icon-circle
        | Investment Processed
    h2.text-uppercase #{company.name}
  .right-columns
    .one_line
      .col40
        span.light_grey Amount Invested
      .col60
        span.bold-grey.font-weight-bold #{'$' + amount}
    .one_line
      .col40
        span.light_grey Investment Day
      .col60
        span.dark_grey #{created_date.format('MM/DD/YYYY') }
    .one_line
      .col40
        span.light_grey Investment ID
      .col60
        span.dark_grey #{id}
    .one_line
      .col40
        span.light_grey Security
      .col60
        span.dark_grey #{security_type == 0 ? 'Common Equity' : 'Revenue Share'}
    .one_line
      .col40.col-perks
        span.light_grey Perks
      .col60.col-perks.showPopover(data-content=perk)
        span.dark_grey #{perk}
  .right_buttons
    h4 Downloadable Files
    -
      var investor_presentation = campaign.investor_presentation_data;
      var presentationUrl = investor_presentation && investor_presentation.length ?
            investor_presentation[0].urls && investor_presentation[0].urls.length ? 
            investor_presentation[0].urls[0] : '#'
            :'#';
    ul
      li
        a(href=presentationUrl target="_blank").link-3 Investor Presentation
      li
        a(href=company_id data-id=id target="_blank").link-3.formc-docs-link Form C
      li
        a(href="#" data-id=id target="_blank").link-3.financial-docs-link Financials
      li
        a(
          href="#"
          data-object-id=id
          data-security-type=security_type
          target="_blank"
        ).link-3.agreement-link Agreements
  .bottom_column
    .top_descript
      .left_text
        b #{app.helpers.format.formatAmount(campaign.amount_raised)}
        span Raised
      .right_text
        b #{app.helpers.format.formatAmount((campaign.minimum_raise))}
        span Goal
      p.percents #{ campaign.fundedPercentage().text }
      .clear
    .progress_line_container
      progress(value=campaign.amount_raised max=(campaign.minimum_raise || campaign.maximum_raise)).progress
    .text-xs-center
      a(href=('/' + company.id)).btn.btn-sm.btn-secondary.text-uppercase view campaign
        i.fa.fa-angle-right
    .cancel_invest
      if active
        a(
          href="#"
          data-id=(id || 0)
        ).cancel-investment.font-weight-bold Cancel investment
  .clear
