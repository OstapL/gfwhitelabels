| !{ app.breadcrumbs('issuer dashboard', '', [ ['Home', '/'], ['issuer dashboard', ''],])}
- var campaignHelpers = require('components/campaign/helpers.js');
- var formcLinks = require('../../campaign/helpers.js').formcLinks
- var moment = require('moment');
- var socialDirective = require('directives/social/index.js');

section.issuer-dashbord-top
  .container
    .row
      .col-md-4
        .img_under_text
          img(src=campaignHelpers.getImageCampaign(campaign) alt="")
          h2.text-uppercase.dosis.m-t-0 #{company.name}
          .timer_day #{campaignHelpers.daysLeft(campaign.expiration_date)} Days Left
        .share-block.d-inline-block.share
          | !{ socialDirective.render(this.company) }

      .col-md-2.col-sm-6.col-xs-6
        a(href="").dashboard-stat
          .visual
            i.fa.fa-bar-chart
          .details
            .number
              span(
                data-counter="counterup"
                data-value=campaign.amount_raised) $#{ campaign.amount_raised }
            .desc Amount Raised

      .col-md-2.col-sm-6.col-xs-6
        a(href="").dashboard-stat.dashboard-stat-v2.grey
          .visual
            i.fa.fa-briefcase
          .details
            .number
              span(
                data-counter="counterup"
                data-value=company.number_of_investors) #{company.number_of_investors.toLocaleString('en-US')}
            .desc Number of Investors

      .col-md-2.col-sm-6.col-xs-6
        a(href="").dashboard-stat.dashboard-stat-v2.grey
          .visual
            i.fa.fa-users
          .details
            .number
              span(
                data-counter="counterup"
                data-value=0) 0
            .desc Page Views

      .col-md-2.col-sm-6.col-xs-6
        a(href="").dashboard-stat.dashboard-stat-v2.grey
          .visual
            i.fa.fa-comments
          .details
            .number
              span(
                data-counter="counterup"
                data-value=0).interactions-count 0
            .desc New Interactions

      .col-md-7.col-sm-10.p-r-0.col-xs-10.hidden-xs-down
        .tpl-progress
          - 
            var percentage_raised = campaignHelpers.daysLeftPercentage(company);
            if(percentage_raised > 100) 
              percentage_raised = 100;
          progress(
            value=percentage_raised
            max="100").progress.big_prog #{ percentage_raised }%
          span(
            style="width:" + percentage_raised + "%").circle_progress
            i.fa.fa-circle-o
          span(style="left:" + percentage_raised + "%").text_position
            - var now = new Date();
            .font-weight-bold
              | #{now.toLocaleString('en-US', { month: "short" })} #{ now.getDate() }
            | #{ app.helpers.format.formatAmount(campaign.amount_raised) } Raised
            //br
            //| #{ app.helpers.format.formatAmount(campaign.amount_commited) } Approved
            //br
            //| Chances: #{ Math.round(percentage_raised / (campaign.minimum_raise  / campaign.amount_commited) * 100) }%
        .progress_description
          .pull-left
            p #{ moment(company.approved_date).format('MM/DD/YYYY') }
            span Begining of campaign
          .pull-right.text-lg-right
            p #{ moment(campaign.expiration_date).format('MM/DD/YYYY') }
            span End of campaign
          .clearfix
      .col-md-1.col-sm-2.col-xs-2.hidden-xs-down
        .right_fixed_text.text-lg-center
          b #{ app.helpers.format.formatAmount(campaign.minimum_raise || campaign.maximum_raise)}
          span Goal
      .col-md-8.col-sm-12.text-xs-center
        a(href="/" + company.slug).btn-sm.btn.btn-secondary.text-uppercase view Campaign
          i(aria-hidden="true").fa.fa-angle-right
    .col-lg-12.border-bottom-50

