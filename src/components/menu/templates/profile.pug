if user.token != ""
  li.nav-item.user-info
    a.nav-link.notification.user-info-name
      span
        - console.log(user)
        if user.image
          img#user-thumbnail(src=app.getThumbnail('55x55', user.image_data.thumbnails) class="img-fluid img-circle")
        else
          i.fa.fa-user
            
      v#user_name.hidden-md-down #{ user.first_name } #{user.last_name}&nbsp;
      i.fa.fa-angle-down
    .list-container.user-info-drop.notification-container.drop-container
      ul.submenu.list-unstyled 
        li
          a(href="/account/profile").nav-link Profile
        if user.company && user.company.name
          li
            a(href="/dashboard/issuer-dashboard").nav-link #{user.company.name}
          li
            a(href="/account/investor-dashboard").nav-link Investor Dashboard
          li
            a(href="/account/logout").nav-link Logout
    
else
  // for desktop
  li.login-sinup.hidden-md-down
    a(href="/account/login").link-login-singup.link-6 Log in
  
  li.login-sinup.hidden-md-down
    a(href="/account/signup").link-login-singup.link-6 Sign up

  // for mobile
  li.nav-item.user-info.hidden-lg-up
    a.nav-link.notification.user-info-name
      span
        i.fa.fa-sign-in
    .list-container.user-info-drop.notification-container.drop-container.not-log-in-user
      ul.submenu.list-unstyled 
        li
          a.nav-link(href="/account/login") Log in
        
        li
          a.nav-link(href="/account/signup") Sign up