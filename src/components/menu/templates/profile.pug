if user.token != ""
  li.nav-item.user-info
    a.nav-link.notification.user-info-name
      span
        - console.log(user)
        if user.image
          img(src=app.getThumbnail('55x55', user.image_data.thumbnails))#user-thumbnail.img-fluid.img-circle
        else
          i.fa.fa-user
            
      v#user_name.hidden-md-down #{ user.first_name } #{user.last_name}&nbsp;
      i.fa.fa-angle-down
    .list-container.user-info-drop.notification-container.drop-container
      ul.submenu.list-unstyled 
        li
          a(href="/account/profile").nav-link Profile
        li
          a(href="/dashboard/issue-dashboard").nav-link Issuer Dashboard
        li
          a(href="/pg/investor_dashboard").nav-link Investor Dashboard
        li
          a(href="/account/logout").nav-link Logout
    
else
  // for desktop
  li.login-sinup.hidden-md-down
    a(href="/account/login").btn.btn-primary Log in
  
  li.login-sinup.hidden-md-down
    a(href="/account/signup").btn.btn-primary Sign up

  // for mobile
  li.nav-item.user-info.hidden-lg-up
    a.nav-link.notification.user-info-name
      span
        i.fa.fa-sign-in
    .list-container.user-info-drop.notification-container.drop-container.not-log-in-user
      ul.submenu.list-unstyled 
        li
          a(href="/account/login").nav-link Log in
        
        li
          a(href="/account/signup").nav-link Sign up
