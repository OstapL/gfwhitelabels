- pug_html += app.breadcrumbs('Blog', '', [ ['Home', '/'], ['Blog', ''], ]);

section.text_block
  .container#blogList
    .row
      .col-lg-3.hidden-md-down 
        .page_title.border-bottom.mb25
          h4.text-uppercase.dosis CATEGORIES
        ul.list-unstyled.mb50.custom
          li
            a(href='').d-inline-block.w-100.pb10 Branding
          li
            a(href='').d-inline-block.w-100.pb10 Business
          li
            a(href='').d-inline-block.w-100.pb10 Design
          li
            a(href='').d-inline-block.w-100.pb10 Development
          li
            // у последнего елемента <a> клас pb10 отстутствует
            a(href='').d-inline-block.w-100 Other

        .page_title.border-bottom.mb25
          h4.text-uppercase.dosis LATEST POSTS
        ul.list-unstyled.mb50.list-blog-aside.list-blog
          li
            a(href='').d-inline-block.w-100.pb10
              img(src="/img/pages/bas1.png" alt="").pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December

          li
            a(href='' alt="").d-inline-block.w-100.pb10
              img(src="/img/pages/bas1.png").pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December

          li
            // у последнего елемента <a> клас pb10 отстутствует
            a(href='' alt="").d-inline-block.w-100
              img(src="/img/pages/bas1.png").pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December
        .page_title.border-bottom.mb25
          h4.text-uppercase.dosis ARCHIVES
        ul.list-unstyled.mb50.list-blog-aside
          li
            a(href='').d-inline-block.w-100.pb10 July 2016

          li
            a(href='' alt="").d-inline-block.w-100.pb10 June 2016

          li
            // у последнего елемента <a> клас pb10 отстутствует
            a(href='' alt="").d-inline-block.w-100 May 2016 

      .col-lg-9
        ul.list-unstyled.list-blog.list-blog-main.m0
          for post in values
            li.pul-md-left.mb50
              article 
                figure
                  p
                    img(src="#{ post.image_data.urls }").img-fluid
                  figcaption
                    h3.dosis.text-uppercase.blog-item-title #{ post.title }
                    .blog-info
                      span.author.text-muted #{ post.author_id } 
                      span.date-blog.text-muted #{ post.created }
                    p 
                      | !{ post.body.replace(/(<([^>]+)>)/ig," ").substr(0, 120) }
                    .btn-blog-block
                      a(href="/blog/" + post.id).btn.btn-md.btn-secondary.text-uppercase read more &nbsp;
                        i.fa.fa-angle-right

        section.pagination
          .container
            .row
              .col-lg-12
                nav
                  ul.pagination.pagination-sm
                    li.page-item.active
                      a(href="#").page-link 1
                    li.page-item
                      a(href="#").page-link 2
                    li.page-item
                      a(href="#").page-link 3
                    li.page-item
                      a(href="#" aria-label="Next").page-link
                        span(aria-hidden="true")
                          i.fa.fa-angle-right
                        span.sr-only Next
