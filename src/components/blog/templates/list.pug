- pug_html += app.breadcrumbs('Blog', '', [ ['Home', '/'], ['Blog', ''], ]);

section.text_block
  .container#blogList
    .row
      .col-lg-3.hidden-md-down 
        .page_title.border-bottom.mb25
          h4.text-uppercase CATEGORIES
        ul.list-unstyled.mb50.custom.pages-left-menu
          li.active
            a(href='').d-inline-block.w-100 All
          li
            a(href='').d-inline-block.w-100 Marketing
          li
            a(href='').d-inline-block.w-100 Crowdfunding Campaign
          li
            a(href='').d-inline-block.w-100 For Investors
        .page_title.border-bottom.mb25
          h4.text-uppercase.dosis Want to fundraise or invest?
        .subscribe-blogs
          p Never miss an update:
          form.form-section
            input(type="email" placeholder="E-mail Address").form-control
            
            label Fundraising for my company
              input(type="checkbox").pull-left
            label Investing in companies
              input(type="checkbox").pull-left
            a(href="#").btn.btn-primary.btn-block subscribe


        .page_title.border-bottom.mb25
          h4.text-uppercase.dosis top POSTS
        

        ul.list-unstyled.mb50.list-blog-aside.list-blog
          li
            a(href='').d-inline-block.w-100.pb10
              img(src=require('images/pages/bas1.png') alt="").pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December

          li
            a(href='' alt="").d-inline-block.w-100.pb10
              img(src=require('images/pages/bas1.png')).pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December

          li
            // у последнего елемента <a> клас pb10 отстутствует
            a(href='' alt="").d-inline-block.w-100
              img(src=require('images/pages/bas1.png')).pull-md-left
              p.title Crowdfunding Regulation
              .blog-info
                span.author John Doe 
                span.date-blog 10 December

      .col-lg-9
        ul.list-unstyled.list-blog.list-blog-main.m0
          for post in values
            li.pul-md-left.mb50
              article 
                figure
                  p
                    img(src=post.image_data.urls).img-fluid
                  figcaption
                    h3.dosis.text-uppercase.blog-item-title #{ post.title }
                    .blog-info
                      span.author.text-muted #{ post.author_id } 
                      span.date-blog.text-muted #{ post.created }
                    p 
                      | !{ post.body.replace(/(<([^>]+)>)/ig," ").substr(0, 120) + '...' }
                    .btn-blog-block
                      a(href="/blog/" + post.id).btn.btn-md.btn-secondary.text-uppercase read more &nbsp;
                        i.fa.fa-angle-right

        section.pagination
          .container
            .row
              .col-lg-12
                nav
                  ul.pagination.pagination-sm
                    li.page-item.active
                      a(href="#").page-link 1
                    li.page-item
                      a(href="#").page-link 2
                    li.page-item
                      a(href="#").page-link 3
                    li.page-item
                      a(href="#" aria-label="Next").page-link
                        span(aria-hidden="true")
                          i.fa.fa-angle-right
                        span.sr-only Next
