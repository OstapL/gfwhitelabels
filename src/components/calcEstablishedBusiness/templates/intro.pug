- document.title = 'Intro - Free Business Valuation Calculator ' + app.config.siteTitle;
- document.head.querySelector('meta[name="description"]').content = 'Take advantage of our free business valuation calculator to understand what your business is worth';

- pug_html += app.breadcrumbs('Business Valuation Calculator', 'intro', [ ['Home', '/'], ["What's My Business Worth?", '/calculator/business-valuation'], ["Business Valuation Calculator", ''],]);

.container.calculator-container
  .row
    .offset-lg-2.col-lg-8
      ul.list-inline.top-breadcrambs.mb45.established-business
        li
          a(href="/calculator/established-business/intro").current.btn
            h4.text-uppercase.m-b-0 Intro
        li
          a(href="/calculator/established-business/step-1").btn
            h4.text-uppercase.m-b-0 step 1
        li
          //- a(href="/calculator/established-business/step-2").btn.text-uppercase step 2
          a(href="/calculator/established-business/step-1").btn
            h4.text-uppercase.m-b-0 step 2
        li
          //- a(href="/calculator/established-business/step-3").btn.text-uppercase step 3
          a(href="/calculator/established-business/step-1").btn
            h4.text-uppercase.m-b-0 step 3
        li
          //- a(href="/calculator/established-business/finish").btn.text-uppercase Finish
          a(href="/calculator/established-business/step-1").btn
            h4.text-uppercase.m-b-0 Finish

  .row
    .offset-lg-3.col-lg-6
      p.text-justify Established businesses with historical earnings information can be valued on a quantitative basis. The GrowthFountain valuation calculator uses a set of industry-specific metrics, along with information that you provide, in order to create a more accurate valuation for your company.
      
      p.mt15.text-justify This calculator can be used to determine both the current value of your company and also the percentage of equity that you will need to offer in order to raise a capital amount that you have defined.

  .row
    .offset-lg-3.col-lg-6.mt50.text-xs-center
      a(href="/calculator/established-business/step-1").btn.btn-primary.pull-sm-right.text-uppercase Ok, let&apos;s get started

