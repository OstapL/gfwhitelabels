- document.title = 'Step 3 - Free Business Valuation Calculator ' + app.config.siteTitle;
- document.head.querySelector('meta[name="description"]').content = 'Take advantage of our free business valuation calculator to understand what your business is worth';

- pug_html += app.breadcrumbs('Business Valuation Calculator', 'Step 3', [ ['Home', '/'], ["What's My Business Worth?", '/calculator/business-valuation'], ["Business Valuation Calculator", ''],]);

.container.calculator-container
  .row
    .offset-lg-2.col-lg-8
      ul.list-inline.top-breadcrambs.mb45.established-business
        li
          a(href="/calculator/established-business/intro").btn
            h4.text-uppercase.m-b-0 Intro
        li
          a(href="/calculator/established-business/step-1").btn
            h4.text-uppercase.m-b-0 step 1
        li
          a(href="/calculator/established-business/step-2").btn
            h4.text-uppercase.m-b-0 step 2
        li
          a(href="/calculator/established-business/step-3").current.btn
            h4.text-uppercase.m-b-0 step 3
        li
          a(href="/calculator/established-business/finish").next.btn
            h4.text-uppercase.m-b-0 Finish

  .row
    .offset-lg-3.col-lg-6
      .warning-block
        i.fa.fa-exclamation-triangle 
        span.warning-text For 
          b the next twelve months, 
          |  please enter the following information about your business.

  .row
    .offset-lg-3.col-lg-6
      form(method="post" action="").js-calc-form.form-section
        .form-body.clearfix
          .form-group.row
            label(for="revenue2").col-lg-12.font-weight-normal Revenue

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.revenue2)
                type='money'
                data-value-type='money'
                placeholder='Revenue'
                name="revenue2",
              )#revenue2.form-control.js-field

          .form-group.row
            label(for="goodsCost2").col-lg-12.font-weight-normal Cost of Goods Sold

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.goodsCost2)
                type='money'
                data-value-type='money'
                placeholder='Cost of Goods Sold'
                autocomplete='off'
                name="goodsCost2",
              )#goodsCost2.form-control.js-field

          .form-group.row
            label(for="operatingExpense2").col-lg-12.font-weight-normal 
              | SG&A, and other Operating Expenses&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="<u>Selling, General & Administrative Operating Expense.</u> The sum of all direct and indirect selling expenses and all general and administrative expenses of a company")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.operatingExpense2)
                type='money'
                data-value-type='money'
                placeholder='SG&A Operating Expense'
                autocomplete='off'
                name="operatingExpense2"
              )#operatingExpense2.form-control.js-field

          .form-group.row
            label(for="oneTimeExpenses2").col-lg-12.font-weight-normal One Time (Extraordinary) Expenses&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="<u>One Time (Extraordinary) Expenses.</u> A rare, infrequent event which financial analysts separate out of the income statement in order to avoid distorting the 'regular' earnings reported by a company. They can include things like adverse legal, regulatory or tax issues, storm damage or restructuring charges.")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.oneTimeExpenses2)
                type='money'
                data-value-type='money'
                placeholder='One Time (Extraordinary) Expenses'
                autocomplete='off'
                name="oneTimeExpenses2"
              )#oneTimeExpenses2.form-control.js-field

          .form-group.row
            label(for="depreciationAmortization2").col-lg-12.font-weight-normal Depreciation  & Amortization&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="<u>Depreciation</u><br/>The allocation of the cost of assets to periods in which the assets are used.<br/><br/><u>Amoritization</u><br/>To write off the cost of an asset gradually.")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.depreciationAmortization2)
                type='money'
                data-value-type='money'
                placeholder='Depreciation & Amortization'
                autocomplete='off'
                name="depreciationAmortization2"
              )#depreciationAmortization2.form-control.js-field

          .form-group.row
            label(for="interestPaid2").col-lg-12.font-weight-normal Interest Paid

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.interestPaid2)
                type='money'
                data-value-type='money'
                placeholder='Interest Paid'
                autocomplete='off'
                name="interestPaid2",
              )#interestPaid2.form-control.js-field

          .form-group.row
            label(for="taxesPaid2").col-lg-12.font-weight-normal Taxes Paid

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.taxesPaid2)
                type='money'
                data-value-type='money'
                placeholder='Taxes Paid'
                autocomplete='off'
                name="taxesPaid2"
              )#taxesPaid2.form-control.js-field

          .form-group.row.clearfix.m0
            .col-xs-6.p-t-2.m-t-1
              a(href='/calculator/established-business/step-1').link-3 Go back

            .col-xs-6.mt30
              .controls
                button(type='submit').btn.btn-primary.pull-right.text-uppercase Finish
                // add class .pointer-events-none to disable all events for this button
