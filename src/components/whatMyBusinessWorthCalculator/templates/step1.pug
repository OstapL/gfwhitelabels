include ../../../templates/mixins.pug

- pug_html += app.breadcrumbs('Capital Raise Calculator', 'step 1', [ ['Home', '/'], ["Capital Raise Calculator", ''],]);

.container.calculator-container
  .row
    .col-xs-12
      ul.list-inline.top-breadcrambs.mb45.capitalraise
        li
          a(href="/calculator/whatmybusinessworth/intro").btn.text-uppercase Intro
        li
          a(href="/calculator/whatmybusinessworth/step-1").current.btn.text-uppercase step 1
        li
          a(href="/calculator/whatmybusinessworth/step-2").next.btn.text-uppercase step 2
        li
          a(href="/calculator/whatmybusinessworth/finish").next.btn.text-uppercase finish

  .row
    .offset-lg-3.col-lg-6
      form(method="post" action="").form-section
        .form-body.clearfix

          .form-group.row
            label(for="excessCash").col-lg-12.font-weight-normal.d-inline-block How much excess cash  does your business need to maintain as a buffer against the unexpected?&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="All entrepreneurs know to «Expect  the Unexpected» timing issues, liquidity crunches and other unexpected issues require a business to maintain excess cash on hand.")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= formatPrice(data.excessCash),
                type='text',
                placeholder='Excess Cash',
                data-input-mask='price',
                autocomplete='off'
                data-model-value='excessCash',
                data-current-value= data.excessCash
                name='excessCash')#excessCash.form-control.js-field

          .form-group.row
            label(for="ownCache").col-lg-12.font-weight-normal How much cash does your business currently have?

            .col-lg-12
              input(
                value= formatPrice(data.ownCache),
                type='text',
                placeholder='Cash on Hands',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='ownCache',
                data-current-value= data.ownCache
                name='ownCache')#ownCache.form-control.js-field

          .form-group.row
            label(for="projectedRevenueYear").col-lg-12.font-weight-normal What is your business’s projected revenue for the next 12 months?

            .col-lg-12
              input(
                value= formatPrice(data.projectedRevenueYear),
                type='text',
                placeholder='Year One Projected Revenue',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='projectedRevenueYear',
                data-current-value= data.projectedRevenueYear
                name="projectedRevenueYear")#projectedRevenueYear.form-control.js-field

          .form-group.row
            label(for="projectedRevenueTwoYears").col-lg-12.font-weight-normal What is your business’s projected revenue for the subsequent 12 months? (i.e. months 13 - 24)

            .col-lg-12
              input(
                value= formatPrice(data.projectedRevenueTwoYears),
                type='text',
                placeholder='Year Two Projected Revenue',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='projectedRevenueTwoYears',
                data-current-value= data.projectedRevenueTwoYears
                name="projectedRevenueTwoYears")#projectedRevenueTwoYears.form-control.js-field

          .form-group.row
            label(for="grossMargin").col-lg-12.font-weight-normal.d-inline-block Let's focus on Cost of Goods Sold, or COGS: What gross margin  do you expect to earn on your business’s sales over the next 2 years?&nbsp;&nbsp;
              i(aria-hidden="true",data-toggle="tooltip",data-original-title="<b><div class=\"large\"><span class=\"formula\">Gross Margin (:%) = Revenue - </span> <span class=\"fraction\"><span class=\"top\">Cost of Goods Sold</span><span class=\"bottom\">Revenue</span></span></div></b>").fa.fa-question-circle.text-muted

            .col-lg-12.mb20
              input(
                type='text',
                data-slider-value= data.grossMargin
                name="grossMargin"
                data-model-value='grossMargin')#grossMargin.form-control.js-bootstrap-slider

          .form-group.row
            label(for="monthlyOperatingYear").col-lg-12.font-weight-normal.d-inline-block What do you expect your monthly operating expenses to average over the next 12 months?&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="The expenses a company incurs as a result of its normal business operations")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= formatPrice(data.monthlyOperatingYear),
                type='text',
                placeholder='Profit Year Five',
                autocomplete='off'
                data-input-mask='price',
                data-model-value='monthlyOperatingYear',
                data-current-value= data.monthlyOperatingYear
                name="monthlyOperatingYear")#monthlyOperatingYear.form-control.js-field

          .form-group.row.clearfix.m0
            .col-xs-6.p-t-2.m-t-1
              a(href='/calculator/whatmybusinessworth/intro').link-3 Go back

            .col-xs-6.mt30
              .controls
                button.btn.btn-primary.pull-right.text-uppercase Next
                // add class .pointer-events-none to disable all events for this button
