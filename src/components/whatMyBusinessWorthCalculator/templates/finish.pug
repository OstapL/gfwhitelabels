- pug_html += app.breadcrumbs('Capital Raise Calculator', 'finish', [ ['Home', '/'], ["Capital Raise Calculator", '/'],]);


.container.calculator-container

  .row
    .col-xs-12
      ul.list-inline.top-breadcrambs.mb45.capitalraise
        li
          a(href="/calculator/whatmybusinessworth/intro").btn.text-uppercase Intro
        li
          a(href="/calculator/whatmybusinessworth/step-1").btn.text-uppercase step 1
        li
          a(href="/calculator/whatmybusinessworth/step-2").btn.text-uppercase step 2
        li
          a(href="/calculator/whatmybusinessworth/finish").current.btn.text-uppercase finish

  .row
    .offset-lg-3.col-lg-6.text-xs-center
      h2.opensans.m0.letter-spacing-2
        i(aria-hidden="true").fa.fa-diamond.finish-icon
        | &nbsp;Based on your inputs, you may want to consider raising
        b &nbsp;#{formatPrice(Math.round(data.finalRaiseAmount / 1000) * 1000)}

  .row
    .offset-md-3.col-md-6.text-sm-center
      hr.mt50.mb50

  .row
    .offset-lg-3.col-lg-6.text-xs-center
      a(href="/calculator/whatmybusinessworth/step-2").btn.btn-primary.text-uppercase back