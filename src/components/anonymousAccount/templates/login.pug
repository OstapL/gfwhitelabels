section.login
  .container
    .col-lg-12
      h2.text-uppercase.text-sm-center.text-xs-center.mt50.m-b-0 Log in
      p.text-xs-center New to GrowthFountain? 
        a(href="/account/signup").link-3 Sign Up
    
    .col-xl-4.col-lg-6.col-sm-8.offset-sm-2.col-md-8.offset-md-2.offset-lg-3.offset-xl-4
      form(action="" novalidate autocomplete="off" role="presentation").form-section.login-form
        .col-lg-12.login-padding.p-xs-0
          input(type="hidden" name="domain" value=window.location.host)
          -
            pug_html += fields.email.render().$el.html();

            pug_html += app.fields.fieldText('password', {
              'class': 'form-group row clearfix',
              required: true,
              type: 'password',
              placeholder: 'Password',
              autocomplete: 'off',
              name: 'password',
            });
        .col-lg-12
          .row.forgot
            a(href="/account/reset").link-3 Forgot Your Password?
        .col-lg-12
          .row.text-sm-center.text-xs-center
            button(type="submit")#login-btn.btn.btn-primary.text-uppercase Log In

      //-
        .col-lg-12.border-bottom.or
          span or
        .social-btn.col-lg-12
          a(data-original-title="facebook" href="#")#login-facebook.btn.btn-block.btn-facebook.text-uppercase
            i.fa.fa-facebook
            |  Log In with Facebook
          a(data-original-title="Linkedin" href="#")#login-linkedin.btn.btn-block.btn-linkedin.text-uppercase
            i.fa.fa-linkedin
            |  Log In with linkedin
          a(data-original-title="Google Plus" href="#")#login-google.btn.btn-block.btn-google.text-uppercase
            i.fa.fa-google-plus
            |  Log In with Google
