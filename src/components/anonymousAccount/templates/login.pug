section.login
  .container
    .col-lg-12
      h2.text-uppercase.text-sm-center.text-xs-center.mt50.m-b-0 Log in
      p.text-xs-center New to GrowthFountain? 
        a(href="/account/signup").link-3 Sign Up
    
    .col-xl-4.col-lg-6.col-sm-8.offset-sm-2.col-md-8.offset-md-2.offset-lg-3.offset-xl-4
      form(action="" novalidate autocomplete="off" role="presentation").form-section.login-form
        .row
          input(type="checkbox" id="agree-rules" name="checkbox1" value="1" checked="1" style="display: none")
          .social-btn.col-lg-12.p-xs-0
            a(data-original-title="facebook" data-network="facebook" href="#")#signup-facebook.btn.btn-block.btn-social-network.btn-facebook.text-uppercase
              i.fa.fa-facebook
              |  log in with Facebook
            a(data-original-title="Linkedin" data-network="linkedin" href="#")#signup-linkedin.btn.btn-block.btn-social-network.btn-linkedin.text-uppercase
              i.fa.fa-linkedin
              |  log in with linkedin
            a(data-original-title="Google Plus" data-network="google" href="#")#signup-google.btn.btn-block.btn-social-network.btn-google.text-uppercase
              i.fa.fa-google-plus
              |  log in with Google
          .col-lg-12.p-xs-0
            .border-bottom.or
              span or
        .col-lg-12.p-xs-0
          input(type="hidden" name="domain" value=window.location.host)
          -
            pug_html += app.fields.fieldText('email', {
              type: 'email',
              placeholder: 'E-mail',
              'class': 'form-group row clearfix',
              required: true,
              autocomplete: 'off',
            });

            pug_html += app.fields.fieldText('password', {
              'class': 'form-group row clearfix',
              required: true,
              type: 'password',
              placeholder: 'Password',
              autocomplete: 'off',
              name: 'password',
            });
        .col-lg-12
          .row.forgot
            a(href="/account/reset").link-3 Forgot Your Password?
        .col-lg-12
          .row.text-sm-center.text-xs-center
            button(type="submit")#login-btn.btn.btn-primary.text-uppercase Log In

        
        
