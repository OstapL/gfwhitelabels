div(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")#sign_up.modal.fade
  div(role="document").modal-dialog
    .modal-content
      .modal-header.sign-up-header
        button(type="button" data-dismiss="modal" aria-label="Close").close
          span(aria-hidden="true")
            i.fa.fa-times
        .title-header-signup.m-t-1
          h1.title.text-uppercase Get
          h1.number.text-uppercase.font-weight-bold &nbsp;$25&nbsp;
          h1.title.text-uppercase Credit
        .title-header-bottom
          span.font-weight-light If You Sign Up Now*
        .col-xl-12
          hr
        .text.col-xl-8.offset-xl-2.text-xs-center
          p *Limited time offer for new accounts only.
            br
            | Credit valid for 90 days and can be used
            br
            | only for investments made on this platform.
            br
            | Other conditions apply, see 
            span
              a(href="/pg/terms_of_use").link-6 Terms of Use.
      .modal-body
        .container.form-section
          h2.text-xs-center.text-uppercase.dosis.modal-title Sign up
          p.text-xs-center Have an account? &nbsp;
            a(href="#").link-3.link-show-login
              | Log In
          form(novalidate autocomplete="off")#sign-up-form.col-lg-10.offset-lg-1
            input(type="hidden" name="domain" value=window.location.host)
            .row
              .social-btn.m-t-2.m-b-2
                button(data-network="facebook")#signup-facebook.btn.btn-block.btn-social-network.btn-facebook.text-uppercase.m-t-0
                  i.fa.fa-facebook
                  |  SIGN UP with Facebook
                button(data-network="linkedin")#signup-linkedin.btn.btn-block.btn-social-network.btn-linkedin.text-uppercase
                  i.fa.fa-linkedin
                  |  SIGN UP with linkedin
                button(data-network="google")#signup-google.btn.btn-block.btn-social-network.btn-google.text-uppercase
                  i.fa.fa-google-plus
                  |  SIGN UP with Google
            .form-group.row.clearfix.required
              .row
                .col-lg-12
                  label.p-t-0
                    input(type="checkbox" name="checkbox1" value="1")#agree-rules
                    p.label-text I agree to the 
                      a(href="/pg/terms_of_use" target="_blank").link-3 Terms of Use
                      | , 
                      a(href="/pg/privacy_policy" target="_blank").link-3 Privacy Policy
                      |  and 
                      a(href="/pg/electronic_signature" target="_blank").link-3 Electronic Signature and Electronic Delivery of Documentation.
                
              .col-lg-12.border-bottom.or
                span or

            -
              pug_html += app.fields.fieldText('first_name', {
                required: true,
                placeholder: 'First Name',
                type: 'text',
                'class': 'form-group row clearfix',
              });
              pug_html += app.fields.fieldText('last_name', {
                required: true,
                placeholder: 'Last Name',
                type: 'text',
                'class': 'form-group row clearfix',
              });
              pug_html += app.fields.fieldText('email', {
                required: true,
                placeholder: 'E-mail',
                type: 'email',
                'class': 'form-group row clearfix',
              });
              pug_html += app.fields.fieldText('password1', {
                required: true,
                placeholder: 'Password',
                type: 'password',
                'class': 'form-group row clearfix',
              });
              pug_html += app.fields.fieldText('password2', {
                required: true,
                placeholder: 'Re-enter Password',
                type: 'password',
                'class': 'form-group row clearfix',
              });
            input(
              type="hidden"
              value=window.location.host
              name="domain"
            )
            .col-lg-12.text-xs-center
              button(type="submit")#signup-btn.btn.btn-primary.text-uppercase Sign up
            
        .modal-footer

div(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")#sign_in.modal.fade
  div(role="document").modal-dialog
    .modal-content
      .container
        .modal-header.p-x-0
          button(type="button" data-dismiss="modal" aria-label="Close").close
            span(aria-hidden="true")
              i.fa.fa-times
          h2.dosis.text-uppercase.text-sm-center.text-xs-center.mt50 Log in
          p.small-text.text-xs-center New to GrowthFountain? &nbsp;
            a(href="#").link-3.link-show-sign-up Sign Up
        .modal-body
          .form-section
            form(novalidate autocomplete="off")#sign-in-form.login-form.col-lg-10.offset-lg-1
              .col-lg-12
                -
                  pug_html += app.fields.fieldText('email', {
                    autocomplete: 'off',
                    required: true,
                    placeholder: 'E-mail',
                    type: 'email',
                    'class': 'form-group row clearfix',
                  });
                  pug_html += app.fields.fieldText('password', {
                    required: true,
                    autocomplete: 'off',
                    placeholder: 'Password',
                    type: 'password',
                  'class': 'form-group row clearfix',
                  });
                input(
                  type="hidden"
                  value=window.location.host
                  name="domain"
                )
              .col-lg-12
                .row.forgot
                  a(href="#").reset-password-link.link-3 Forgot Your Password?
              .col-lg-12
                .row.text-sm-center.text-xs-center
                  button(type="submit")#login-btn.btn.btn-primary.btn-login.text-uppercase Log In
            //-
              .col-lg-12.border-bottom.or
                span or
              .social-btn.col-lg-12
                a(data-original-title="facebook" href="#")#login-facebook.btn.btn-block.btn-facebook.text-uppercase
                  i.fa.fa-facebook
                  |  Log In with Facebook
                a(data-original-title="Linkedin" href="#")#login-linkedin.btn.btn-block.btn-linkedin.text-uppercase
                  i.fa.fa-linkedin
                  |  Log In with linkedin
                a(data-original-title="Google Plus" href="#")#login-google.btn.btn-block.btn-google.text-uppercase
                  i.fa.fa-google-plus
                  |  Log In with Google
    .modal-footer
