div(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")#sign_in.modal.fade.login
  div(role="document").modal-dialog
    .modal-content
      .container
        .modal-header.p-x-0
          button(type="button" data-dismiss="modal" aria-label="Close").close
            span(aria-hidden="true")
              i.fa.fa-times
          h2.dosis.text-uppercase.text-sm-center.text-xs-center.mt50 Log in
          p.small-text.text-xs-center.m-b-0 New to GrowthFountain? &nbsp;
            a(href="#").link-3.switchAuthPopup Sign Up
        .modal-body
          .form-section
            form(novalidate autocomplete="off")#sign-in-form.login-form.col-lg-10.offset-lg-1
              .row
                input(type="checkbox" id="agree-rules" name="checkbox1" value="1" checked="1" style="display: none")
                .social-btn.col-lg-12.p-xs-0.m-t-0
                  a(data-original-title="facebook" data-network="facebook" href="#")#signup-facebook.btn.btn-block.btn-social-network.btn-facebook.text-uppercase
                    i.fa.fa-facebook
                    |  log in with Facebook
                  a(data-original-title="Linkedin" data-network="linkedin" href="#")#signup-linkedin.btn.btn-block.btn-social-network.btn-linkedin.text-uppercase
                    i.fa.fa-linkedin
                    |  log in with linkedin
                  a(data-original-title="Google Plus" data-network="google" href="#")#signup-google.btn.btn-block.btn-social-network.btn-google.text-uppercase
                    i.fa.fa-google-plus
                    |  log in with Google
                .col-lg-12.p-xs-0
                  .border-bottom.or
                    span or
              .col-lg-12.p-xs-0
                -
                  pug_html += app.fields.fieldText('email', {
                    autocomplete: 'off',
                    required: true,
                    placeholder: 'E-mail',
                    type: 'email',
                    'class': 'form-group row clearfix',
                  });
                  pug_html += app.fields.fieldText('password', {
                    required: true,
                    autocomplete: 'off',
                    placeholder: 'Password',
                    type: 'password',
                  'class': 'form-group row clearfix',
                  });
                input(
                  type="hidden"
                  value=window.location.host
                  name="domain"
                )
              .col-lg-12.p-xs-0
                .row.forgot
                  a(href="#").reset-password-link.link-3 Forgot Your Password?
              .col-lg-12
                .row.text-sm-center.text-xs-center
                  button(type="submit")#login-btn.btn.btn-primary.btn-login.text-uppercase Log In
    .modal-footer
