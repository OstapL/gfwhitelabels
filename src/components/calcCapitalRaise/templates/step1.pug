- document.title = 'Step 1 - Free Capital Raise Calculator for Equity Crowdfunding ' + app.config.siteTitle;
- document.head.querySelector('meta[name="description"]').content = 'Take advantage of our free capital raise calculator to help map out your funding plan';

- pug_html += app.breadcrumbs('Capital Raise Calculator', 'step 1', [ ['Home', '/'], ["Capital Raise Calculator", ''],]);

.container.calculator-container
  .row
    .offset-lg-2.col-lg-8
      ul.list-inline.top-breadcrambs.mb45.capitalraise
        li
          a(href="/calculator/capital-raise").btn
            h4.text-uppercase.m-b-0 Intro
        li
          a(href="/calculator/capital-raise/step-1").current.btn
            h4.text-uppercase.m-b-0 step 1
        li
          a(href="/calculator/capital-raise/step-2").next.btn
            h4.text-uppercase.m-b-0 step 2
        li
          a(href="/calculator/capital-raise/finish").next.btn
            h4.text-uppercase.m-b-0 finish

  .row
    .offset-lg-3.col-lg-6
      form(method="post" action="").form-section
        .form-body.clearfix

          .form-group.row
            label(for="excessCash").col-lg-12.font-weight-normal.d-inline-block How much excess cash  does your business need to maintain as a buffer against the unexpected?&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="All entrepreneurs know to «Expect  the Unexpected» timing issues, liquidity crunches and other unexpected issues require a business to maintain excess cash on hand.")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.excessCash)
                type='money'
                data-value-type='money'
                placeholder='Excess Cash'
                autocomplete='off'
                name='excessCash'
              )#excessCash.form-control.js-field

          .form-group.row
            label(for="ownCache").col-lg-12.font-weight-normal How much cash does your business currently have?

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.ownCache)
                type='money'
                data-value-type='money'
                placeholder='Cash on Hands'
                autocomplete='off'
                name='ownCache'
              )#ownCache.form-control.js-field

          .form-group.row
            label(for="projectedRevenueYear").col-lg-12.font-weight-normal What is your business’s projected revenue for the next 12 months?

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.projectedRevenueYear)
                type='money'
                data-value-type='money'
                placeholder='Year One Projected Revenue'
                autocomplete='off'
                name="projectedRevenueYear"
              )#projectedRevenueYear.form-control.js-field

          .form-group.row
            label(for="projectedRevenueTwoYears").col-lg-12.font-weight-normal What is your business’s projected revenue for the subsequent 12 months? (i.e. months 13 - 24)

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.projectedRevenueTwoYears)
                type='money'
                data-value-type='money'
                placeholder='Year Two Projected Revenue'
                autocomplete='off'
                name="projectedRevenueTwoYears"
              )#projectedRevenueTwoYears.form-control.js-field

          .form-group.row
            label(for="grossMargin").col-lg-12.font-weight-normal.d-inline-block Let's focus on Cost of Goods Sold, or COGS: What gross margin  do you expect to earn on your business’s sales over the next 2 years?&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="<b class=\"what-my-business-worth\"><div class=\"large\"><span class=\"formula\">Gross Margin (:%) = Revenue - </span><span class=\"fraction\"><span class=\"top\">Cost of Goods Sold</span><span class=\"bottom\">Revenue</span></span></div></b>")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted
            .col-lg-12.mb20.text-xs-center.bootstrap-slider-calc
              input(
                type='percent',
                data-value-type='percent'
                data-slider-value= data.grossMargin
                name="grossMargin"
              )#grossMargin.form-control.js-bootstrap-slider

          .form-group.row
            label(for="monthlyOperatingYear").col-lg-12.font-weight-normal.d-inline-block What do you expect your monthly operating expenses to average over the next 12 months?&nbsp;&nbsp;
              div.d-inline-block
                div.showPopover(data-content="The expenses a company incurs as a result of its normal business operations")
                  i(aria-hidden="true").fa.fa-question-circle.text-muted

            .col-lg-12
              input(
                value= app.helpers.format.formatMoney(data.monthlyOperatingYear)
                type='money'
                data-value-type='money'
                placeholder='Average Monthly Expenses'
                autocomplete='off'
                name="monthlyOperatingYear"
              )#monthlyOperatingYear.form-control.js-field

          .form-group.row.clearfix.m0
            .col-xs-6.p-t-2.m-t-1
              a(href='/calculator/capital-raise').link-3 Go back

            .col-xs-6.mt30
              .controls
                button.btn.btn-primary.pull-right.text-uppercase Next
                // add class .pointer-events-none to disable all events for this button
