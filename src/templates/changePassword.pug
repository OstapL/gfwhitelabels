include mixins.pug
section.reset
    .container
        .col-lg-12
            h2.dosis.text-uppercase.text-sm-center.text-xs-center.m-t-85 Change Password

        .col-lg-4.offset-lg-4
            form(action="" method="post").form-section.login-form
                .col-lg-12
                    .form-group.row.clearfix.required
                        input(type="password" placeholder="Old password" name="password").form-control
                .col-lg-12
                    .form-group.row.clearfix.required
                        input(type="password" placeholder="New password" name="password").form-control
                .col-lg-12
                    .form-group.row.clearfix.required
                        input(type="password" placeholder="Repeat password" name="password").form-control
                .col-lg-12
                    .row.text-sm-center
                        button(type="submit").btn.btn-primary.text-uppercase Change